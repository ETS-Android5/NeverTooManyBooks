<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageButton
        android:id="@id/ROW_DELETE_BTN"
        style="@style/RowButton.Delete"
        android:contentDescription="@string/action_delete"
        app:layout_constraintEnd_toStartOf="@id/ROW_ONCLICK_TARGET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/ROW_ONCLICK_TARGET"
        style="@style/RowTextSection"
        android:longClickable="true"
        app:layout_constraintEnd_toStartOf="@id/ROW_GRABBER_ICON"
        app:layout_constraintStart_toEndOf="@id/ROW_DELETE_BTN"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/title"
            style="@style/RowTextLine.Primary"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SelectableText"
            tools:text="@sample/data.json/book/title"
            />

        <TextView
            android:id="@+id/year"
            style="@style/RowTextLine.Secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:ignore="SelectableText"
            tools:text="(1987)"
            />

        <TextView
            android:id="@+id/author"
            style="@style/RowTextLine.Secondary"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/year"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:ignore="SelectableText"
            tools:text="@sample/data.json/author/full_name"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@id/ROW_GRABBER_ICON"
        style="@style/RowButton.DragHandle"
        android:contentDescription="@string/hint_btn_drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ROW_ONCLICK_TARGET"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
