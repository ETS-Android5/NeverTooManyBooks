<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_header"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?attr/colorControlHighlight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="Overdraw"
    tools:showIn="@layout/booksonbookshelf"
    >

    <TextView
        android:id="@+id/style_name"
        style="@style/BooklistBook.Header.Text"
        android:textIsSelectable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="style name"
        />

    <TextView
        android:id="@+id/filter_text"
        style="@style/BooklistBook.Header.Text.Small"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/style_name"
        tools:text="the optional search text"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/book_count"
        style="@style/BooklistBook.Header.Text.Small"
        android:layout_marginBottom="@dimen/border2"
        android:textIsSelectable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_text"
        tools:text="@string/txt_displaying_n_books_in_m_entries"
        />

    <TextView
        android:id="@+id/level_1_text"
        style="@style/BooklistBook.Header.Text.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_count"
        tools:ignore="SelectableText"
        tools:text="level 1 text"
        />

    <TextView
        android:id="@+id/level_2_text"
        style="@style/BooklistBook.Header.Text.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level_1_text"
        tools:ignore="SelectableText"
        tools:text="level 2 text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

