<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goodreads.GoodreadsRegistrationActivity"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar.Activity"
            app:title="@string/site_goodreads"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/screenBorder"
            >

            <TextView
                style="@style/Text.Body"
                android:text="@string/gr_auth_blurb_part1"
                />

            <Button
                android:id="@+id/goodreads_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="https://www.goodreads.com"
                />

            <TextView
                style="@style/Text.Body"
                android:text="@string/gr_auth_blurb_part2"
                />

            <TextView
                style="@style/Text.Body"
                android:text="@string/gr_auth_blurb_part3"
                />

            <Button
                android:id="@+id/btn_authorize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/info_authorized_needed"
                app:icon="@drawable/ic_security"
                />

            <TextView
                android:id="@+id/lbl_delete_credentials"
                style="@style/Text.Body"
                android:text="@string/gr_auth_blurb_part4"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <Button
                android:id="@+id/btn_delete_credentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/action_clear_credentials"
                android:visibility="gone"
                app:icon="@drawable/ic_delete"
                tools:visibility="visible"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
