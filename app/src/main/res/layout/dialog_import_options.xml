<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Dialog.Body.Floating"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.hardbacknutter.nevertoomanybooks.widgets.ConstraintRadioGroup
            android:id="@+id/rb_books_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="rb_books_all,rb_books_sync"
            tools:ignore="MissingConstraints"
            />

        <!-- control visibility of checkboxes. -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/cbx_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="cbx_books,cbx_covers,cbx_prefs_and_styles"
            />

        <CheckBox
            android:id="@+id/cbx_books"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/lbl_books"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <RadioButton
            android:id="@+id/rb_books_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indent_radio_button"
            android:checked="true"
            android:text="@string/bookshelf_all_books"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbx_books"
            />

        <ImageButton
            android:id="@+id/info_btn_rb_books_all"
            style="@style/InfoButton"
            android:contentDescription="@string/txt_import_option_all_books"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/rb_books_all"
            app:layout_constraintTop_toTopOf="@id/rb_books_all"
            />

        <RadioButton
            android:id="@+id/rb_books_sync"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indent_radio_button"
            android:text="@string/lbl_import_option_new_and_changed_books"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rb_books_all"
            />

        <ImageButton
            android:id="@+id/info_btn_rb_books_sync"
            style="@style/InfoButton"
            android:contentDescription="@string/txt_import_option_new_and_changed_books"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/rb_books_sync"
            app:layout_constraintTop_toTopOf="@id/rb_books_sync"
            />

        <CheckBox
            android:id="@+id/cbx_covers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/lbl_covers_long"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rb_books_sync"
            />

        <CheckBox
            android:id="@+id/cbx_prefs_and_styles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/lbl_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbx_covers"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
