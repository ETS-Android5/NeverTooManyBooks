<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searches.goodreads.GoodreadsSearchActivity"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/indent_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/indent4"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/original_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="lbl_author,author,lbl_title,title,lbl_isbn,isbn,list_divider"
        />

    <TextView
        android:id="@+id/lbl_author"
        style="@style/FieldLabel"
        android:labelFor="@id/author"
        android:text="@string/lbl_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <TextView
        android:id="@+id/author"
        style="@style/TextDetail"
        android:hint="@string/lbl_author"
        app:layout_constraintStart_toEndOf="@id/indent_fields"
        app:layout_constraintTop_toBottomOf="@id/lbl_author"
        />

    <TextView
        android:id="@+id/lbl_title"
        style="@style/FieldLabel"
        android:labelFor="@id/title"
        android:text="@string/lbl_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author"
        />

    <TextView
        android:id="@+id/title"
        style="@style/TextDetail"
        android:hint="@string/lbl_title"
        app:layout_constraintStart_toEndOf="@id/indent_fields"
        app:layout_constraintTop_toBottomOf="@id/lbl_title"
        />

    <TextView
        android:id="@+id/lbl_isbn"
        style="@style/FieldLabel"
        android:labelFor="@id/isbn"
        android:text="@string/lbl_isbn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />

    <TextView
        android:id="@+id/isbn"
        style="@style/TextDetail"
        android:hint="@string/lbl_isbn"
        app:layout_constraintStart_toEndOf="@id/indent_fields"
        app:layout_constraintTop_toBottomOf="@id/lbl_isbn"
        />

    <TextView
        android:id="@+id/lbl_search_text"
        style="@style/FieldLabel"
        android:text="@string/lbl_search_criteria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isbn"
        />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_search_text"
        android:inputType="textMultiLine"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/indent_fields"
        app:layout_constraintTop_toBottomOf="@id/lbl_search_text"
        tools:ignore="Autofill"
        />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/menu_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_text"
        />

    <View
        android:id="@+id/list_divider"
        style="@style/SectionDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_search"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@android:id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/footer_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_divider"
        app:layout_constraintVertical_weight="1"
        tools:listitem="@layout/row_goodreads_work_item"
        />

    <View
        android:id="@+id/footer_divider"
        style="@style/SectionDivider"
        app:layout_constraintBottom_toTopOf="@id/works_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- not used for now -->
    <TextView
        android:id="@+id/works_found"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textIsSelectable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>