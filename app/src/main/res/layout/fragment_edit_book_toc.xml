<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_scroller"
    style="@style/TopNestedScroller"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/container_margin"
        >

        <RadioGroup
            android:id="@+id/rg_book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:layout_marginTop="@dimen/field_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RadioButton
                android:id="@+id/rb_is_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_collection"
                />

            <RadioButton
                android:id="@+id/rb_is_anthology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_anthology"
                />

            <RadioButton
                android:id="@+id/rb_is_neither"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/neither"
                />
        </RadioGroup>

        <Button
            android:id="@+id/btn_add"
            style="@style/Button.Action.Submit"
            android:text="@string/action_add"
            app:layout_constraintBottom_toTopOf="@id/tocList"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_header_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="rg_book_type,,btn_add"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tocList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_header_bottom"
            tools:listitem="@layout/row_edit_toc_entry"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>