<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/border1"
    >

    <CheckBox
        android:id="@+id/cbx_is_anthology"
        style="@style/CheckboxEntry"
        android:text="@string/lbl_toc_anthology"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        />

    <CheckBox
        android:id="@+id/cbx_multiple_authors"
        style="@style/CheckboxEntry"
        android:text="@string/lbl_toc_multiple_authors"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbx_is_anthology"
        tools:checked="true"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirm_new"
        app:layout_constraintBottom_toBottomOf="@id/cbx_multiple_authors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <requestFocus />
    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tocList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbx_multiple_authors"
        tools:listitem="@layout/row_edit_toc_entry"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
