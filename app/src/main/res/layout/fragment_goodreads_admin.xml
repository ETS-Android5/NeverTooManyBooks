<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AdminActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/border1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/lbl_sync_with_goodreads"
            style="@style/OptionRow.Menu"
            android:layout_margin="@dimen/border3"
            android:drawableStart="@drawable/ic_autorenew"
            android:text="@string/gr_title_sync_with_goodreads"
            />

        <TextView
            android:id="@+id/lbl_import_all_from_goodreads"
            style="@style/OptionRow.Menu"
            android:layout_margin="@dimen/border3"
            android:drawableStart="@drawable/ic_file_download"
            android:text="@string/gr_menu_import_all_from_goodreads"
            />

        <TextView
            android:id="@+id/lbl_send_updated_books_to_goodreads"
            style="@style/OptionRow.Menu"
            android:layout_margin="@dimen/border3"
            android:drawableStart="@drawable/ic_send"
            android:text="@string/gr_menu_send_updated"
            />

        <TextView
            android:id="@+id/lbl_send_all_books_to_goodreads"
            style="@style/OptionRow.Menu"
            android:layout_margin="@dimen/border3"
            android:drawableStart="@drawable/ic_file_upload"
            android:text="@string/gr_menu_send_all"
            />

        <TextView
            android:id="@+id/lbl_background_tasks"
            style="@style/OptionRow.Menu"
            android:layout_margin="@dimen/border3"
            android:drawableStart="@drawable/ic_format_list_bulleted"
            android:text="@string/gr_tq_menu_background_tasks"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
