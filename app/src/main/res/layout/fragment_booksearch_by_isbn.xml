<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topScroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BookSearchActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border1"
        >

        <EditText
            android:id="@+id/isbn"
            style="@style/EditText.Isbn.Large"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,LabelFor"
            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_search"
            app:layout_constraintBaseline_toBaselineOf="@id/isbn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/isbn"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="btn_search,isbn"
            />

        <Button
            android:id="@+id/isbn_1"
            style="@style/IsbnSearchKey"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@id/isbn_4"
            app:layout_constraintEnd_toStartOf="@id/isbn_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/isbn"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_2"
            style="@style/IsbnSearchKey"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@id/isbn_5"
            app:layout_constraintEnd_toStartOf="@id/isbn_3"
            app:layout_constraintStart_toEndOf="@id/isbn_1"
            app:layout_constraintTop_toBottomOf="@id/isbn"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_3"
            style="@style/IsbnSearchKey"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/isbn_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/isbn_2"
            app:layout_constraintTop_toBottomOf="@id/btn_search"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_4"
            style="@style/IsbnSearchKey"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@id/isbn_7"
            app:layout_constraintEnd_toStartOf="@id/isbn_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/isbn_1"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_5"
            style="@style/IsbnSearchKey"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@id/isbn_8"
            app:layout_constraintEnd_toStartOf="@id/isbn_6"
            app:layout_constraintStart_toEndOf="@id/isbn_4"
            app:layout_constraintTop_toBottomOf="@id/isbn_2"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_6"
            style="@style/IsbnSearchKey"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@id/isbn_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/isbn_5"
            app:layout_constraintTop_toBottomOf="@id/isbn_3"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_7"
            style="@style/IsbnSearchKey"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@id/isbn_X"
            app:layout_constraintEnd_toStartOf="@id/isbn_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/isbn_4"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_8"
            style="@style/IsbnSearchKey"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@id/isbn_0"
            app:layout_constraintEnd_toStartOf="@id/isbn_9"
            app:layout_constraintStart_toEndOf="@id/isbn_7"
            app:layout_constraintTop_toBottomOf="@id/isbn_5"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_9"
            style="@style/IsbnSearchKey"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@id/isbn_del"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/isbn_8"
            app:layout_constraintTop_toBottomOf="@id/isbn_6"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_X"
            style="@style/IsbnSearchKey"
            android:text="X"
            app:layout_constraintBottom_toTopOf="@id/barrierBottom"
            app:layout_constraintEnd_toStartOf="@id/isbn_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/isbn_7"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/isbn_0"
            style="@style/IsbnSearchKey"
            android:text="0"
            app:layout_constraintBottom_toTopOf="@id/barrierBottom"
            app:layout_constraintEnd_toStartOf="@id/isbn_del"
            app:layout_constraintStart_toEndOf="@id/isbn_X"
            app:layout_constraintTop_toBottomOf="@id/isbn_8"
            tools:ignore="HardcodedText"
            />

        <ImageButton
            android:id="@+id/isbn_del"
            style="@style/IsbnSearchKey.Del"
            android:contentDescription="@string/menu_delete"
            app:layout_constraintBottom_toTopOf="@id/barrierBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/isbn_0"
            app:layout_constraintTop_toBottomOf="@id/isbn_9"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="isbn_X,isbn_del,isbn_0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>