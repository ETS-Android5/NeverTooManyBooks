<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/OptionRow"
    >

    <CheckBox
        android:id="@id/ROW_CHECKABLE_BTN"
        style="@style/RowButton.Checkable"
        app:layout_constraintEnd_toStartOf="@id/ROW_ONCLICK_TARGET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        />

    <LinearLayout
        android:id="@id/ROW_ONCLICK_TARGET"
        style="@style/RowTextSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ROW_GRABBER_ICON"
        app:layout_constraintStart_toEndOf="@id/ROW_CHECKABLE_BTN"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/name"
            style="@style/RowTextLine.Primary"
            tools:ignore="SelectableText"
            tools:text="site name"
            />

        <TextView
            android:id="@+id/info"
            style="@style/RowTextLine.Secondary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            tools:ignore="SelectableText"
            tools:text="site info"
            tools:visibility="visible"
            />
    </LinearLayout>

    <ImageView
        android:id="@id/ROW_GRABBER_ICON"
        style="@style/RowButton.DragHandle"
        android:contentDescription="@string/hint_btn_drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ROW_ONCLICK_TARGET"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
