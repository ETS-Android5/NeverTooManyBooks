<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <CheckBox
        android:id="@+id/cbx_read"
        style="@style/Flag.Read"
        android:contentDescription="@string/lbl_read"
        android:visibility="gone"
        tools:checked="true"
        tools:visibility="visible"
        />

    <CheckBox
        android:id="@+id/cbx_first_edition"
        style="@style/Flag.FirstEdition"
        android:contentDescription="@string/lbl_edition_first_edition"
        android:visibility="gone"
        tools:checked="true"
        tools:visibility="visible"
        />

    <CheckBox
        android:id="@+id/cbx_signed"
        style="@style/Flag.Signed"
        android:contentDescription="@string/lbl_signed"
        android:visibility="gone"
        tools:checked="true"
        tools:visibility="visible"
        />

    <CheckBox
        android:id="@+id/cbx_on_loan"
        style="@style/Flag.OnLoan"
        android:contentDescription="@string/lbl_loaned"
        android:visibility="gone"
        tools:checked="true"
        tools:visibility="visible"
        />
</LinearLayout>
