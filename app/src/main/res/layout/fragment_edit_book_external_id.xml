<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/screenBorder"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lbl_site_goodreads"
            style="@style/Envelope.EditText"
            android:layout_marginTop="@dimen/border2"
            android:hint="@string/site_goodreads"
            android:layout_width="@dimen/field_external_id_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/site_goodreads"
                style="@style/genericNumberEntry"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                tools:ignore="Autofill"
                tools:text="123456"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lbl_site_isfdb"
            style="@style/Envelope.EditText"
            android:hint="@string/site_isfdb"
            android:layout_width="@dimen/field_external_id_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_site_goodreads"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/site_isfdb"
                style="@style/genericNumberEntry"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                tools:ignore="Autofill"
                tools:text="123456"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lbl_site_library_thing"
            style="@style/Envelope.EditText"
            android:hint="@string/site_library_thing"
            android:layout_width="@dimen/field_external_id_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_site_isfdb"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/site_library_thing"
                style="@style/genericNumberEntry"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                tools:ignore="Autofill"
                tools:text="123456"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lbl_site_open_library"
            style="@style/Envelope.EditText"
            android:hint="@string/site_open_library"
            android:layout_width="@dimen/field_external_id_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_site_library_thing"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/site_open_library"
                style="@style/genericTextEntry"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                tools:ignore="Autofill"
                tools:text="abc123"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lbl_site_strip_info_be"
            style="@style/Envelope.EditText"
            android:hint="@string/site_stripinfo_be"
            android:layout_width="@dimen/field_external_id_width"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_site_open_library"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/site_strip_info_be"
                style="@style/genericNumberEntry"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                tools:ignore="Autofill"
                tools:text="123456"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

