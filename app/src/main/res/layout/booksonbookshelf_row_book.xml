<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BooklistBook.Row"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/coverImage0"
        style="@style/CoverImage"
        android:contentDescription="@string/lbl_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="@dimen/tools_cover_medium_height"
        tools:layout_width="@dimen/tools_cover_medium_width"
        tools:src="@drawable/ic_image"
        />

    <include
        android:id="@+id/icon_sidebar"
        layout="@layout/booksonbookshelf_row_inc_iconbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ROW_ONCLICK_TARGET"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/ROW_ONCLICK_TARGET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent2"
        app:layout_constraintEnd_toStartOf="@id/icon_sidebar"
        app:layout_constraintStart_toEndOf="@id/coverImage0"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/series_num_long"
            style="@style/BooklistBook.BookInfo.Secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SelectableText"
            tools:text="series_num_long"
            />

        <TextView
            android:id="@+id/series_num"
            style="@style/BooklistBook.BookInfo.Secondary"
            android:layout_width="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/series_num_long"
            tools:ignore="SelectableText"
            tools:text="###"
            />

        <TextView
            android:id="@+id/title"
            style="@style/BooklistBook.BookInfo.Title"
            android:layout_marginStart="@dimen/indent1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/series_num"
            app:layout_constraintTop_toBottomOf="@id/series_num_long"
            tools:ignore="SelectableText"
            tools:text="@string/lbl_title"
            />

        <Space
            android:id="@+id/spacer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/border1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            />

        <include layout="@layout/booksonbookshelf_row_inc_extras" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
