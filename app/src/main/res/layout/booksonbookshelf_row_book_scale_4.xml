<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BoB.BookContainer"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row"
            style="@style/BoB.Book"
            android:layout_width="0dp"
            android:layout_weight="1"
            >

            <com.hardbacknutter.nevertoomanybooks.widgets.ExtGroup
                android:id="@id/ROW_ONCLICK_TARGET"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:constraint_referenced_ids="row,series_num_long,series_num,title,extras"
                app:groupApply="onclick|tags"
                tools:ignore="MissingConstraints"
                />

            <TextView
                android:id="@+id/series_num_long"
                style="@style/BoB.Book.Text"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SelectableText"
                tools:text="series_num_long"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/series_num"
                style="@style/BoB.Book.Text.SeriesNum"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@id/title"
                app:layout_constraintEnd_toStartOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SelectableText"
                tools:text="###"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/title"
                style="@style/BoB.Book.Text.Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/series_num"
                app:layout_constraintTop_toBottomOf="@id/series_num_long"
                tools:ignore="SelectableText"
                tools:text="@sample/data.json/book/title"
                />

            <ImageView
                android:id="@+id/coverImage0"
                style="@style/CoverImage"
                android:contentDescription="@string/lbl_cover_front"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:layout_height="@dimen/tools_cover_scale_4_height"
                tools:layout_width="@dimen/tools_cover_scale_4_width"
                tools:src="@sample/covers"
                />

            <include
                android:id="@+id/extras"
                layout="@layout/booksonbookshelf_row_inc_extras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/coverImage0"
                app:layout_constraintTop_toBottomOf="@id/title"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/icon_sidebar"
            layout="@layout/booksonbookshelf_row_inc_iconbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
