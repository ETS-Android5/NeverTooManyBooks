<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/coverImage0"
        style="@style/CoverImage"
        android:contentDescription="@string/lbl_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="@dimen/tools_cover_medium_height"
        tools:layout_width="@dimen/tools_cover_medium_width"
        tools:src="@sample/covers"
        />

    <TextView
        android:id="@+id/title"
        style="@style/Text"
        android:layout_marginStart="@dimen/indent1"
        app:layout_constraintStart_toEndOf="@id/coverImage0"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SelectableText"
        tools:text="@sample/data.json/book/title"
        />

    <TextView
        android:id="@+id/author"
        style="@style/Text"
        android:layout_marginStart="@dimen/indent2"
        app:layout_constraintStart_toEndOf="@id/coverImage0"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:ignore="SelectableText"
        tools:text="@sample/data.json/author/full_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
