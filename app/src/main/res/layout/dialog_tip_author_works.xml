<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Dialog.Body"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/fixedContent"
        style="@style/Text.Header.Indented"
        android:text="@string/tip_authors_works"
        tools:ignore="SelectableText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_margin_top"
        android:drawableStart="@drawable/ic_baseline_library_books_24"
        android:drawablePadding="@dimen/drawable_padding_start"
        android:text="@string/tip_authors_works_multiple_books"
        tools:ignore="UseCompatTextViewDrawableXml"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_book_24"
        android:drawablePadding="@dimen/drawable_padding_start"
        android:text="@string/tip_authors_works_book"
        tools:ignore="UseCompatTextViewDrawableXml"
        />
</LinearLayout>
