<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/border1"
    app:contentPadding="@dimen/border0"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/BooklistBook.Row"
        >

        <com.hardbacknutter.nevertoomanybooks.widgets.ExtGroup
            android:id="@id/ROW_ONCLICK_TARGET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="series_num,series_num_long,title,extras,spacerSide"
            tools:ignore="MissingConstraints"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/series_num_long"
            style="@style/BooklistBook.BookInfo.SeriesNumLong"
            app:layout_constraintEnd_toStartOf="@id/icon_sidebar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SelectableText"
            tools:text="series_num_long"
            />

        <TextView
            android:id="@+id/series_num"
            style="@style/BooklistBook.BookInfo.SeriesNum"
            app:layout_constraintBaseline_toBaselineOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SelectableText"
            tools:text="###"
            />

        <TextView
            android:id="@+id/title"
            style="@style/BooklistBook.BookInfo.Title"
            app:layout_constraintEnd_toStartOf="@id/icon_sidebar"
            app:layout_constraintStart_toEndOf="@id/series_num"
            app:layout_constraintTop_toBottomOf="@id/series_num_long"
            tools:ignore="SelectableText"
            tools:text="@string/lbl_title"
            />

        <ImageView
            android:id="@+id/coverImage0"
            style="@style/CoverImage"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/indent2"
            android:layout_marginTop="@dimen/border1"
            android:contentDescription="@string/lbl_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:layout_height="@dimen/tools_cover_2x_large_height"
            tools:layout_width="@dimen/tools_cover_2x_large_width"
            tools:src="@drawable/ic_image"
            />

        <!-- A View, and not a 'Space' as this must be clickable. -->
        <View
            android:id="@+id/spacerSide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/coverImage0"
            app:layout_constraintEnd_toStartOf="@id/icon_sidebar"
            app:layout_constraintStart_toEndOf="@id/coverImage0"
            app:layout_constraintTop_toTopOf="@id/coverImage0"
            />

        <include
            android:id="@+id/icon_sidebar"
            layout="@layout/booksonbookshelf_row_inc_iconbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <include
            android:id="@+id/extras"
            layout="@layout/booksonbookshelf_row_inc_extras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coverImage0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
