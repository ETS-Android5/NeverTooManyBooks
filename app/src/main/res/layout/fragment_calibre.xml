<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/screen_border"
    >

    <TextView
        android:id="@+id/header"
        style="@style/Text.Header"
        android:layout_marginStart="@dimen/header_margin_start"
        android:layout_marginTop="@dimen/header_margin_top"
        android:text="@string/pt_maintenance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_lib_map"
        style="@style/Button.Menu"
        android:text="@string/lbl_bookshelves"
        app:icon="@drawable/ic_sync_alt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        />

    <Button
        android:id="@+id/btn_import"
        style="@style/Button.Menu"
        android:text="@string/action_import"
        app:icon="@drawable/ic_cloud_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_lib_map"
        />

    <Button
        android:id="@+id/btn_send_updated_books"
        style="@style/Button.Menu"
        android:text="@string/action_export"
        app:icon="@drawable/ic_cloud_upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_import"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
