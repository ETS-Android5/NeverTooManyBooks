<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/OptionRow"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/border1"
        android:src="@drawable/ic_archive"
        app:layout_constraintEnd_toStartOf="@id/filename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/filename"
        style="@style/FileInfo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SelectableText"
        tools:text="my_library.bcbk"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/file_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="file_content,size,date"
        />

    <TextView
        android:id="@+id/file_content"
        style="@style/FileInfo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/filename"
        app:layout_constraintTop_toBottomOf="@id/filename"
        tools:ignore="SelectableText"
        tools:text="1023 books, 3 covers,..."
        />

    <TextView
        android:id="@+id/size"
        style="@style/FileInfo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintBaseline_toBaselineOf="@id/date"
        app:layout_constraintStart_toStartOf="@id/filename"
        app:layout_constraintTop_toBottomOf="@id/file_content"
        tools:ignore="SelectableText"
        tools:text="10 Mb"
        />

    <TextView
        android:id="@+id/date"
        style="@style/FileInfo"
        android:layout_marginStart="@dimen/indent2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/size"
        app:layout_constraintTop_toBottomOf="@id/file_content"
        tools:ignore="SelectableText"
        tools:text="Fri, 23 July, 17:54:01 2011"
        />

</androidx.constraintlayout.widget.ConstraintLayout>