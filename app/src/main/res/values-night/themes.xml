<resources>

    <!-- Top level Theme to be used in AndroidManifest.xml-->
    <style name="Theme.App" parent="Base.Theme.App">
        <!-- ====================================== -->
        <!-- Material color attributes (dark theme) -->
        <!-- ====================================== -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorOnPrimary">@color/night_on_primary</item>

        <!--   <item name="colorSecondary">@color/night_secondary</item>-->
        <!--   <item name="colorOnSecondary">@color/night_on_secondary</item>-->

        <!-- ====================================== -->
        <!-- Application specific (dark theme) -->
        <!-- ====================================== -->
        <item name="appPreferenceAlertColor">@color/red_500</item>
        <!-- the default colorSurface #121212 works fine in night. -->
        <item name="appCardBackgroundColor">?attr/colorSurface</item>

        <!-- gradient used in the Navigation side bar. -->
        <item name="appNavBarColorStart">@color/blue_grey_800</item>
        <item name="appNavBarColorCenter">@color/blue_grey_600</item>
        <item name="appNavBarColorEnd">@color/blue_grey_400</item>

        <!-- M3: colorOutline: m3_sys_color_dark_outline: m3_ref_palette_neutral_variant60: -->
        <item name="appColorOutline">#ff938f99</item>
    </style>

    <style name="Theme.App.Startup" parent="Base.Theme.App.Startup">
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorOnPrimary">@color/night_on_primary</item>

        <!--   <item name="colorSecondary">@color/night_secondary</item>-->
        <!--   <item name="colorOnSecondary">@color/night_on_secondary</item>-->
