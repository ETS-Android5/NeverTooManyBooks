<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- =================== -->
        <!-- Theme Color palette -->
        <!-- =================== -->
        <item name="colorPrimary">@color/blue_grey_600</item>
        <item name="colorPrimaryVariant">@color/blue_grey_700</item>
        <item name="colorPrimaryDark">@color/blue_grey_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/cyan_500</item>
        <item name="colorSecondaryVariant">@color/cyan_600</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorControlNormal">@color/white</item>

        <!--  ======================== -->
        <!-- Component theme overrides -->
        <!--  ======================== -->

        <!-- <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>-->

        <item name="snackbarTextViewStyle">@style/SnackbarText</item>


        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="appHeaderBackgroundColor">@color/blue_grey_800</item>
        <item name="appBookCardBackgroundColor">?attr/colorSurface</item>

        <item name="appFsOverlayTextColor">?attr/colorOnPrimary</item>
        <item name="appFsOverlayBackgroundColor">?attr/colorPrimary</item>

        <!-- gradient used in the Navigation side bar. -->
        <item name="appNavBarStartColor">@color/blue_grey_800</item>
        <item name="appNavBarCenterColor">@color/blue_grey_500</item>
        <item name="appNavBarEndColor">@color/blue_grey_400</item>

        <item name="appIconTint">?attr/colorControlNormal</item>
        <item name="appIconTintChecked">@color/green_300</item>
        <item name="appIconTintCompleted">@color/teal_300</item>

    </style>

</resources>
