<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topScroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BookSearchActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border1"
        >

        <com.hardbacknutter.nevertoomanybooks.widgets.EditIsbn
            android:id="@+id/isbn"
            style="@style/EditText.Isbn.Large"
            app:layout_constraintEnd_toStartOf="@id/isbn_del"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,LabelFor"
            tools:text="123456789X123"
            />

        <Button
            android:id="@+id/isbn_del"
            style="@style/IsbnKeyPadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/menu_delete"
            app:icon="@drawable/ic_backspace"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="@id/isbn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/isbn"
            />

        <ImageButton
            android:id="@+id/btn_swap"
            style="@style/SwapButton"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/isbn"
            app:layout_constraintTop_toBottomOf="@id/isbn"
            tools:visibility="visible"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/altIsbn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/btn_swap"
            app:layout_constraintTop_toBottomOf="@id/isbn"
            tools:text="1234567890"
            tools:visibility="visible"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/topBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="btn_swap,altIsbn,isbn,isbn_del"
            />

        <Button
            android:id="@+id/key_1"
            style="@style/IsbnKeyPadButton"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@id/key_7"
            app:layout_constraintEnd_toStartOf="@id/key_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBarrier"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_2"
            style="@style/IsbnKeyPadButton"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@id/key_8"
            app:layout_constraintEnd_toStartOf="@id/key_3"
            app:layout_constraintStart_toEndOf="@id/key_1"
            app:layout_constraintTop_toBottomOf="@id/topBarrier"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_3"
            style="@style/IsbnKeyPadButton"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/key_9"
            app:layout_constraintEnd_toStartOf="@id/key_4"
            app:layout_constraintStart_toEndOf="@id/key_2"
            app:layout_constraintTop_toBottomOf="@id/topBarrier"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_4"
            style="@style/IsbnKeyPadButton"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@id/key_0"
            app:layout_constraintEnd_toStartOf="@id/key_5"
            app:layout_constraintStart_toEndOf="@id/key_3"
            app:layout_constraintTop_toBottomOf="@id/topBarrier"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_5"
            style="@style/IsbnKeyPadButton"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@id/key_X"
            app:layout_constraintEnd_toStartOf="@id/key_6"
            app:layout_constraintStart_toEndOf="@id/key_4"
            app:layout_constraintTop_toBottomOf="@id/topBarrier"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_6"
            style="@style/IsbnKeyPadButton"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@id/btn_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/key_5"
            app:layout_constraintTop_toBottomOf="@id/topBarrier"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_7"
            style="@style/IsbnKeyPadButton"
            android:text="7"
            app:layout_constraintEnd_toStartOf="@id/key_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key_1"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_8"
            style="@style/IsbnKeyPadButton"
            android:text="8"
            app:layout_constraintEnd_toStartOf="@id/key_9"
            app:layout_constraintStart_toEndOf="@id/key_7"
            app:layout_constraintTop_toBottomOf="@id/key_2"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_9"
            style="@style/IsbnKeyPadButton"
            android:text="9"
            app:layout_constraintEnd_toStartOf="@id/key_0"
            app:layout_constraintStart_toEndOf="@id/key_8"
            app:layout_constraintTop_toBottomOf="@id/key_3"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_0"
            style="@style/IsbnKeyPadButton"
            android:text="0"
            app:layout_constraintEnd_toStartOf="@id/key_X"
            app:layout_constraintStart_toEndOf="@id/key_9"
            app:layout_constraintTop_toBottomOf="@id/key_4"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/key_X"
            style="@style/IsbnKeyPadButton"
            android:text="X"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            app:layout_constraintStart_toEndOf="@id/key_0"
            app:layout_constraintTop_toBottomOf="@id/key_5"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/btn_search"
            style="@style/IsbnKeyPadButton"
            android:contentDescription="@string/btn_search"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/key_X"
            app:layout_constraintTop_toBottomOf="@id/key_6"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
