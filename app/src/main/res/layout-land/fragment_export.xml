<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/screen_border"
    android:visibility="invisible"
    tools:context=".FragmentHostActivity"
    tools:visibility="visible"
    >

    <com.hardbacknutter.nevertoomanybooks.widgets.ConstraintRadioGroup
        android:id="@+id/rb_books_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="rb_export_books_option_all,rb_export_books_option_new_and_updated"
        tools:ignore="MissingConstraints"
        />

    <CheckBox
        android:id="@+id/cbx_books"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/field_margin_start"
        android:checked="true"
        android:text="@string/lbl_books"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RadioButton
        android:id="@+id/rb_export_books_option_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent_radio_button"
        android:checked="true"
        android:text="@string/lbl_export_books_option_all"
        app:layout_constraintStart_toStartOf="@id/cbx_books"
        app:layout_constraintTop_toBottomOf="@id/cbx_books"
        />

    <RadioButton
        android:id="@+id/rb_export_books_option_new_and_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indent_radio_button"
        android:text="@string/lbl_export_books_option_since_last_full_backup"
        app:layout_constraintStart_toStartOf="@id/cbx_books"
        app:layout_constraintTop_toBottomOf="@id/rb_export_books_option_all"
        />

    <ImageButton
        android:id="@+id/inf_export_books_option_new_and_updated"
        style="@style/InfoButton"
        android:contentDescription="@string/txt_export_books_option_since_last_full_backup"
        app:layout_constraintStart_toEndOf="@id/rb_export_books_option_new_and_updated"
        app:layout_constraintTop_toTopOf="@id/rb_export_books_option_new_and_updated"
        />

    <CheckBox
        android:id="@+id/cbx_covers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/lbl_covers_long"
        app:layout_constraintStart_toStartOf="@id/cbx_books"
        app:layout_constraintTop_toBottomOf="@id/rb_export_books_option_new_and_updated"
        />

    <View
        android:id="@+id/formatDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbx_covers"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lbl_archive_format"
        style="@style/ExposedDropdownMenu"
        android:layout_margin="@dimen/field_margin_start"
        android:hint="@string/lbl_archive_format"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formatDivider"
        >

        <AutoCompleteTextView
            android:id="@+id/archive_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            tools:ignore="LabelFor"
            tools:text="@sample/data.json/export_format/name"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/archive_format_info"
        style="@style/Text.Body.Small"
        android:layout_marginStart="@dimen/field_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_archive_format"
        tools:ignore="SelectableText"
        tools:text="@string/lbl_archive_format_xml_info"
        />

    <TextView
        android:id="@+id/archive_format_info_long"
        style="@style/Text.Body.Small"
        android:layout_marginStart="@dimen/field_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/archive_format_info"
        tools:ignore="SelectableText"
        tools:text="@string/lbl_archive_is_export_only"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
