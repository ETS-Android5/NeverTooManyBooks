<!--suppress LongLine -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TopNestedScroller"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/TopCentered"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/indent_column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/indent_column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66"
            />

        <TextView
            android:id="@+id/lbl_site"
            style="@style/Text.Header"
            android:text="@string/lbl_select_website"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!--suppress LongLine -->
        <com.hardbacknutter.nevertoomanybooks.widgets.ConstraintRadioGroup
            android:id="@+id/sites_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:constraint_referenced_ids="site_amazon,site_goodreads,site_isfdb,site_last_dodo_nl,site_library_thing,site_open_library,site_strip_info_be"
            tools:ignore="MissingConstraints"
            />

        <!-- NEWTHINGS: adding a new search engine:
                optional: external id KEY add a RadioButton widget
                and add the name to the ConstraintRadioGroup#constraint_referenced_ids. -->

        <RadioButton
            android:id="@+id/site_goodreads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_goodreads"
            app:layout_constraintEnd_toStartOf="@id/indent_column2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_site"
            />

        <!-- fully functional, but the data returned by LT (on its own) is rather lacking
            hence disabling this one -->
        <RadioButton
            android:id="@+id/site_library_thing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_library_thing"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/indent_column2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/site_goodreads"
            tools:visibility="visible"
            />

        <RadioButton
            android:id="@+id/site_open_library"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_open_library"
            app:layout_constraintEnd_toStartOf="@id/indent_column2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/site_library_thing"
            />


        <!-- Amazon search is disabled. For books the user can/should use the isbn search.-->
        <RadioButton
            android:id="@+id/site_amazon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_amazon"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/indent_column3"
            app:layout_constraintStart_toEndOf="@id/indent_column2"
            app:layout_constraintTop_toBottomOf="@id/lbl_site"
            tools:visibility="visible"
            />

        <RadioButton
            android:id="@+id/site_isfdb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_isfdb"
            app:layout_constraintEnd_toStartOf="@id/indent_column3"
            app:layout_constraintStart_toEndOf="@id/indent_column2"
            app:layout_constraintTop_toBottomOf="@id/site_amazon"
            />


        <RadioButton
            android:id="@+id/site_strip_info_be"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_stripinfo_be"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/indent_column3"
            app:layout_constraintTop_toBottomOf="@id/lbl_site"
            />

        <RadioButton
            android:id="@+id/site_last_dodo_nl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/field_margin_start"
            android:text="@string/site_lastdodo_nl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/indent_column3"
            app:layout_constraintTop_toBottomOf="@id/site_strip_info_be"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="site_goodreads,site_library_thing,site_open_library,site_amazon,site_isfdb,site_strip_info_be,site_last_dodo_nl"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lbl_external_id"
            style="@style/TIL.EditText.ExternalId"
            android:paddingStart="@dimen/field_margin_inline"
            android:paddingEnd="@dimen/field_margin_inline"
            android:hint="@string/lbl_site_book_id"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_bottom"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/external_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_apps_24"
                android:enabled="false"
                android:imeOptions="actionSearch"
                android:inputType="number"
                tools:ignore="Autofill"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_search"
            style="@style/Button.Action.Submit"
            android:text="@android:string/search_go"
            app:icon="@drawable/ic_baseline_search_24"
            app:layout_constraintBaseline_toBaselineOf="@id/lbl_external_id"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
