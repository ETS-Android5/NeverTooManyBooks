<!-- android.widget.ImageView -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ImageView - Generic cover image. -->
    <style name="CoverImage">
        <!-- padding MUST be 0dp to allow scaling ratio to work properly. -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <!-- we'll add a context menu -->
        <item name="android:focusable">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="CoverImage.BrowserPreview">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/cover_browser_preview_width</item>
        <item name="android:layout_height">@dimen/cover_browser_preview_height</item>
    </style>

    <style name="CoverImage.BrowserGallery">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/cover_browser_gallery_width</item>
        <item name="android:layout_height">@dimen/cover_browser_gallery_height</item>
    </style>
</resources>
