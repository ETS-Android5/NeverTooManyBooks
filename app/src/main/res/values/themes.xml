<resources>
    <!--
    These are the standard attributes that make up a complete theme.
    https://developer.android.com/reference/android/R.styleable.html#Theme
    -->

    <!-- Specific Theme for full screen usage. -->
    <style name="AppTheme.FullScreen" parent="AppTheme.DayNight">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ================ -->
    <!-- Day/Night theme. -->
    <!-- ================ -->
    <!--<style name="AppTheme.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">-->
    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/blue_grey_600</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>
        <item name="itemTouchHelper_onDragging_color">@color/grey_200</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_a200</item>

    </style>

    <!-- =========== -->
    <!-- Dark theme. -->
    <!-- =========== -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/grey_200</item>
        <item name="checked_icon_tint">@color/light_green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>
        <item name="itemTouchHelper_onDragging_color">@color/grey_200</item>

        <!--  =========================== -->
        <!-- Theme Color palette -->
        <!--  =========================== -->

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_a200</item>

    </style>

    <!-- ============ -->
    <!-- Light theme. -->
    <!-- ============ -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/blue_grey_600</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>
        <item name="itemTouchHelper_onDragging_color">@color/grey_200</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_a200</item>

    </style>
</resources>