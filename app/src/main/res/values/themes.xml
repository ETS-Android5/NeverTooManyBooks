<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- =================== -->
        <!-- Theme Color palette -->
        <!-- =================== -->
        <item name="colorPrimary">@color/blue_grey_100</item>
        <item name="colorPrimaryVariant">@color/blue_grey_200</item>
        <item name="colorPrimaryDark">@color/blue_grey_300</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/cyan_200</item>
        <item name="colorSecondaryVariant">@color/cyan_300</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--        <item name="colorSurface">@color/white</item>-->
        <!--        <item name="colorOnSurface">@color/black</item>-->

        <item name="colorControlNormal">@color/black</item>

        <!--  ======================== -->
        <!-- Component theme overrides -->
        <!--  ======================== -->

        <!-- <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>-->

        <item name="snackbarTextViewStyle">@style/SnackbarText</item>


        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="appHeaderBackgroundColor">@color/blue_grey_50</item>
        <!-- don't use surface color in light mode. -->
        <item name="appBookCardBackgroundColor">@color/grey_50</item>

        <item name="appFsOverlayTextColor">?attr/colorOnPrimary</item>
        <item name="appFsOverlayBackgroundColor">?attr/colorPrimary</item>

        <!-- gradient used in the Navigation side bar. -->
        <item name="appNavBarStartColor">@color/blue_grey_400</item>
        <item name="appNavBarCenterColor">@color/blue_grey_100</item>
        <item name="appNavBarEndColor">@color/blue_grey_50</item>

        <item name="appIconTint">?attr/colorControlNormal</item>
        <item name="appIconTintChecked">@color/green_300</item>
        <item name="appIconTintCompleted">@color/teal_300</item>

    </style>

    <!-- Specific Theme for full screen usage. -->
    <style name="Theme.App.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

