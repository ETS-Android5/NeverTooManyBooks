<!--
These are the standard attributes that make up a complete theme.
https://developer.android.com/reference/android/R.styleable.html#Theme

Material styles etc.
https://medium.com/androiddevelopers/migrating-to-material-components-for-android-ec6757795351

Full color list:
https://material.io/design/material-theming/implementing-your-theme.html#color
-->
<resources>

    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- =================== -->
        <!-- Theme Color palette -->
        <!-- =================== -->
        <item name="colorPrimary">@color/blue_grey_200</item>
        <item name="colorPrimaryVariant">@color/blue_grey_400</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/cyan_200</item>
        <!--        <item name="colorSecondaryVariant">@color/cyan_700</item>-->
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/grey_50</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorControlNormal">@color/black</item>

        <!--  ======================== -->
        <!-- Component theme overrides -->
        <!--  ======================== -->
        <item name="snackbarTextViewStyle">@style/SnackbarText</item>

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->
        <item name="bob_fs_overlay_text_color">?attr/colorOnPrimary</item>
        <item name="bob_fs_overlay_background_color">?attr/colorPrimary</item>

        <item name="bob_list_header_background_color">@color/blue_grey_50</item>

        <!-- gradient used in the Navigation side bar. -->
        <item name="nav_bar_start_color">@color/blue_grey_400</item>
        <item name="nav_bar_center_color">@color/blue_grey_100</item>
        <item name="nav_bar_end_color">@color/blue_grey_50</item>

        <item name="icon_tint">?attr/colorControlNormal</item>
        <item name="icon_tint_checked">@color/green_300</item>
        <item name="icon_tint_completed">@color/teal_300</item>

    </style>

    <!-- Specific Theme for full screen usage. -->
    <style name="AppTheme.FullScreen" parent="AppTheme.DayNight">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
