<!--
     https://www.vogella.com/tutorials/AndroidStylesThemes/article.html
     Section 1.2: w600, w800, w1000 can be seen as switching/margin points
     -->
<resources>
    <!-- Maximum space a zoomed cover can use of the screen; 0..100 -->
    <integer name="cover_zoom_screen_percentage">95</integer>

    <!-- Book details screen. Front cover at the top, back cover below. -->
    <dimen name="cover_details_0_height">200dp</dimen>
    <dimen name="cover_details_0_width">128dp</dimen>
    <dimen name="cover_details_1_height">100dp</dimen>
    <dimen name="cover_details_1_width">64dp</dimen>

    <!-- Book edit screen. Displayed side by side. -->
    <dimen name="cover_edit_0_height">150dp</dimen>
    <dimen name="cover_edit_0_width">96dp</dimen>
    <dimen name="cover_edit_1_height">150dp</dimen>
    <dimen name="cover_edit_1_width">96dp</dimen>

    <dimen name="cover_browser_gallery_height">80dp</dimen>
    <dimen name="cover_browser_gallery_width">50dp</dimen>

    <dimen name="cover_browser_preview_height">250dp</dimen>
    <dimen name="cover_browser_preview_width">160dp</dimen>

    <!-- BoB screen. We use a square space for the image so both portrait/landscape cover images work out.
         The sizes are calculated at {0, 1, 2, 3, 5, 8, 12} * 50dp
         Width is set at a ratio 0.64.
    (0.60 is common for paperbacks)
    -->
    <array name="cover_book_list_longest_side">
        <item>0dp</item>
        <item>50dp</item>
        <item>100dp</item>
        <!-- size index 3 is the default. -->
        <item>150dp</item>
        <item>250dp</item>
        <item>400dp</item>
        <item>600dp</item>
    </array>

    <dimen name="tools_cover_scale_3_height">150dp</dimen>
    <dimen name="tools_cover_scale_3_width">96dp</dimen>

    <dimen name="tools_cover_scale_4_height">250dp</dimen>
    <dimen name="tools_cover_scale_4_width">160dp</dimen>

    <dimen name="tools_cover_scale_5_height">400dp</dimen>
    <dimen name="tools_cover_scale_5_width">256dp</dimen>

</resources>
