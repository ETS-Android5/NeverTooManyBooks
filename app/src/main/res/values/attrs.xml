<resources>

    <!-- The header on the BoB screen.
         Default was using the surfaceColor, we override here. -->
    <attr name="bobHeaderBackgroundColor" format="reference|color" />
    <!-- The card view for a book on the BoB screen.
         Default was using the surfaceColor, we override here. -->
    <attr name="bobBookCardBackgroundColor" format="reference|color" />

    <!-- The fast-scroller overlay -->
    <attr name="bobFsOverlayTextColor" format="reference|color" />
    <attr name="bobFsOverlayBackgroundColor" format="reference|color" />

    <!-- gradient used in the Navigation side bar. -->
    <attr name="navBarStartColor" format="reference|color" />
    <attr name="navBarCenterColor" format="reference|color" />
    <attr name="navBarEndColor" format="reference|color" />

    <!-- Global abstraction for an icon tint. See the drawable/ic_* files. -->
    <attr name="iconTint" format="reference|color" />
    <!-- Color for a boolean status icon; true: this color; false: transparent. -->
    <attr name="iconTintChecked" format="reference|color" />
    <!-- Color for a boolean status icon; true: this color; false: transparent. -->
    <attr name="iconTintCompleted" format="reference|color" />

    <declare-styleable name="ExtGroup">
        <attr name="applyVisibility" format="boolean" />
        <attr name="applyOnClick" format="boolean" />
        <attr name="applyTags" format="boolean" />
    </declare-styleable>

</resources>
