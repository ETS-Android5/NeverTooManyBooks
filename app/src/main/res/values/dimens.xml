<!-- The layout and button sizes in dimens.xml were tested with:

    Generic 10.1" (800 x 1280) - 160dpi - sw800
    Generic  7.0" (600 x 1024) - 160dpi - sw600

    Pixel2 - 5.0" (1080 x 1920) - 420dpi - sw411dp
    port: w411dp h659dp
    land: w683dp h387dp

    Samsung A5-2017 - 5.2" (1080 x 1920) - 480dpi - sw360dp
    port:  w360dp h616dp
    land:  w640dp h336dp

    4WVGA 4.0" (480 x 800) - 240dpi - sw320dp
    port: w320dp h509dp
    land: w533dp h296dp
-->

<!--
    4WVGA 4.0" (480 x 800) - 240dpi - sw320dp
    port: w320dp h509dp
    land: w533dp h296dp
-->
<resources>

    <!-- elevation for a progress bar overlaying a View. -->
    <dimen name="progress_z">10dp</dimen>

    <!-- layout_margin for top level layouts. -->
    <dimen name="screen_border">4dp</dimen>

    <!-- Navigation panel header. -->
    <dimen name="nav_header_horizontal_padding">16dp</dimen>
    <dimen name="nav_header_vertical_padding">16dp</dimen>
    <dimen name="nav_header_vertical_spacing">8dp</dimen>
    <dimen name="nav_header_height">176dp</dimen>
    <!-- square dimensions of the icon. -->
    <dimen name="nav_header_icon_size">100dp</dimen>


    <!-- Spacing around the FAB. -->
    <dimen name="fab_margin">16dp</dimen>
    <!-- offset to the left, as compared to the base FAB button -->
    <dimen name="fab_menu_translationX">-20dp</dimen>
    <!-- added to the offset when using small screens -->
    <dimen name="fab_menu_translationX_delta">-60dp</dimen>
    <!-- offset upwards, as compared to the base FAB button -->
    <dimen name="fab_menu_translationY_base">-10dp</dimen>
    <!-- offset + (level * delta) -->
    <dimen name="fab_menu_translationY_delta">-60dp</dimen>


    <!-- fast scroller. -->
    <dimen name="cfs_default_thickness">8dp</dimen>
    <dimen name="cfs_margin">0dp</dimen>
    <dimen name="cfs_minimum_range">50dp</dimen>
    <!-- fast scroller popup text -->
    <dimen name="afs_popup_min_size">88dp</dimen>
    <dimen name="afs_popup_margin_end">16dp</dimen>
    <dimen name="afs_popup_text_size">18sp</dimen>
    <dimen name="afs_md2_popup_min_width">78dp</dimen>
    <dimen name="afs_md2_popup_min_height">64dp</dimen>
    <dimen name="afs_md2_popup_margin_end">14dp</dimen>
    <dimen name="afs_md2_popup_padding_start">16dp</dimen>
    <dimen name="afs_md2_popup_padding_end">29dp</dimen>
    <dimen name="afs_md2_popup_elevation">3dp</dimen>
    <dimen name="afs_md2_popup_text_size">18sp</dimen>


    <!-- the margin around the CardView. -->
    <dimen name="bob_book_card_margin">8dp</dimen>
    <!-- The content padding used for the CardView content displaying a Book. -->
    <dimen name="bob_book_card_content_padding">4dp</dimen>
    <!-- top margin for the top-level rows; also known as "fat_finger_spacer" -->
    <dimen name="bob_row_level_1_top_margin">4dp</dimen>
    <!-- indent multiplier for the levels in the booklist:
         paddingIndent = (level-1) * booklist_level_indent -->
    <dimen name="bob_level_indent">8dp</dimen>
    <!--
        The text size (in sp units, but in float notation) for all text in a book list row.
        For reference:
        {@code
           <dimen name="text_size_small_material">14sp</dimen>
           <dimen name="text_size_medium_material">18sp</dimen>
           <dimen name="text_size_large_material">22sp</dimen>
        }
        Index 2 -> 18sp being the default.
    -->
    <array name="bob_text_size_in_sp">
        <item>12.0</item>
        <item>14.0</item>
        <item>18.0</item>
        <item>22.0</item>
        <item>32.0</item>
    </array>
    <!--
        Padding scale factor (we multiply this value with the actual padding settings)
        to go with "bob_text_size_in_sp"

        Index 2 -> 1x being the default.
    -->
    <array name="bob_text_padding_in_percent">
        <item>0.77</item>
        <item>0.88</item>
        <item>1</item>
        <item>1.11</item>
        <item>1.22</item>
    </array>


    <!-- above the label of a field. -->
    <dimen name="field_label_margin_top">4dp</dimen>
    <!-- Margin applied around all TextInputLayout fields. -->
    <dimen name="til_field_margin">2dp</dimen>
    <!-- Start margin (and optional end) applied to a field.
         Used for individual fields, or with a Guideline for a group of fields. -->
    <dimen name="field_margin_start">8dp</dimen>
    <dimen name="field_margin_start_large">16dp</dimen>
    <!-- Start margin applied to the 2nd, 3rd.. field on a line of fields. -->
    <dimen name="field_margin_inline_start">12dp</dimen>


    <!-- The width of an on-screen menu button.
         Intended to be 'almost' as wide as a phone screen in portrait mode.
         The 296 value is based on 4WVGA (480 x 800; hdpi) - 240dpi - sw320dp
         Should/can be overridden in bigger-screen dimen.xml files.
    -->
    <dimen name="large_menu_button">296dp</dimen>

    <!-- specific fixed-width fields. -->
    <dimen name="field_external_id_width">280dp</dimen>
    <dimen name="field_about_number_width">60dp</dimen>




    <!-- Spacing either for all around, or for bottom/top. NOT for start/end, for the latter use 'indent' -->
    <dimen name="border2">8dp</dimen>

    <!-- indent a radio button. -->
    <dimen name="indent_radio_button">16dp</dimen>

    <!-- the width for a Button displaying an icon (24dp) and no text. -->
    <dimen name="icon_button_width">48dp</dimen>

    <!-- indent for the check on a ROW_CHECKABLE_BTN. -->
    <dimen name="indent_row_checkable_btn">12dp</dimen>

    <!-- generic drawable padding (between icon and text). -->
    <dimen name="drawable_padding">20dp</dimen>


    <!-- Make a header text align with list elements which are preceded by an icon.
         Intention is to mimic a PreferenceCategory title indent. -->
    <dimen name="header_margin_top">4dp</dimen>
    <dimen name="header_margin_start">52dp</dimen>


    <!-- Material medium text size. -->
    <dimen name="editText_isbn_textSize">18sp</dimen>
</resources>
