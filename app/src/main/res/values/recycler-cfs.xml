<resources>
    <!--
    Copied from: recyclerview-1.1.0-alpha01-sources.jar/res/values/values.xml

    The CFSRecyclerView specific attributes are all prefixed with 'cfs'
    -->
    <declare-styleable name="CFSRecyclerView">
        <!-- Class name of the Layout Manager to be used. -->
        <attr format="string" name="layoutManager"/>

        <!-- Attributes for Layout Manager -->
        <attr name="android:orientation"/>
        <attr name="android:descendantFocusability"/>
        <attr format="integer" name="spanCount"/>
        <attr format="boolean" name="reverseLayout"/>
        <attr format="boolean" name="stackFromEnd"/>

        <attr format="boolean" name="cfsEnabled"/>
        <!-- mandatory if cfsEnabled==true -->
        <attr format="reference" name="cfsVerticalThumbDrawable"/>
        <attr format="reference" name="cfsVerticalTrackDrawable"/>
        <attr format="reference" name="cfsHorizontalThumbDrawable"/>
        <attr format="reference" name="cfsHorizontalTrackDrawable"/>
        <attr format="reference" name="cfsOverlayDrawable"/>
    </declare-styleable>

    <dimen name="cfs_default_thickness">8dp</dimen>
    <dimen name="cfs_margin">0dp</dimen>
    <dimen name="cfs_minimum_range">50dp</dimen>

    <dimen name="cfs_fast_scroll_min_thumb_height">48dp</dimen>

</resources>
