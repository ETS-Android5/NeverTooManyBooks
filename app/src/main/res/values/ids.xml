<resources>

    <!-- BEGIN rows in a {@link RecyclerView} -->

    <!-- If present, indicates the part of the row which should have the onclick listeners set.
         If not present, the listeners are set on the entire row.
    -->
    <item name="ROW_ONCLICK_TARGET" type="id" />
    <!-- optional delete button, should live outside of the onclick target -->
    <item name="ROW_DELETE_BTN" type="id" />
    <!-- optional checkable button, should live outside of the onclick target -->
    <item name="ROW_CHECKABLE_BTN" type="id" />
    <!-- optional grabber handle, should live outside of the onclick target -->
    <item name="ROW_GRABBER_ICON" type="id" />
    <!-- END rows in a {@link RecyclerView} -->


    <!-- BEGIN View tags -->
    <!-- tags a Cover Image View with the task responsible to fetch the image -->
    <item name="TAG_THUMBNAIL_TASK" type="id" />
    <!-- tags a Cover Image View with the 'uuid' (i.e. the book) it represents. -->
    <item name="TAG_THUMBNAIL_UUID" type="id" />

    <!-- Updating fields from the internet. We keep each field usage directly on the field selector. -->
    <item name="TAG_FIELD_USAGE" type="id" />

    <!-- Tagging a (sub) View in a list with the Goodreads 'Work' it represents. -->
    <item name="TAG_GR_WORK" type="id" />
    <!-- END View tags -->

    <!-- generic ids for the Goodreads taskqueue component. -->
    <item name="LEGACY_VIEW_1" type="id" />
    <item name="LEGACY_VIEW_2" type="id" />

    <!-- The 'name' field on the edit-style fragment. -->
    <item name="STYLE_NAME_VIEW" type="id" />
</resources>
