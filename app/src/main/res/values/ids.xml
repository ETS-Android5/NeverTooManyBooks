<resources>

    <!-- BEGIN used for rows in a {@link RecyclerView} -->

    <!-- If present, indicates the part of the row which should have the onclick listeners set.
         If not present, the listeners are set on the entire row.
    -->
    <item name="ROW_ONCLICK_TARGET" type="id" />
    <!-- optional delete button, should live outside of the onclick target -->
    <item name="ROW_DELETE_BTN" type="id" />
    <!-- optional checkable button, should live outside of the onclick target -->
    <item name="ROW_CHECKABLE_BTN" type="id" />
    <!-- optional grabber handle, should live outside of the onclick target -->
    <item name="ROW_GRABBER_ICON" type="id" />
    <!-- BEGIN used for rows in a {@link RecyclerView} -->

    <!-- BEGIN View tags -->
    <!-- tags a Cover Image View with the task responsible to fetch the image -->
    <item name="TAG_THUMBNAIL_TASK" type="id" />
    <!-- Tagging a (sub) View in a list with the 'item' it represents. -->
    <item name="TAG_ITEM" type="id" />
    <!-- Tagging a View in a list with the ViewHolder it represents. -->
    <item name="TAG_VIEW_HOLDER" type="id" />
    <!-- Passing a position on from the BooklistAdapter to the click-listeners. -->
    <item name="TAG_BL_POSITION" type="id" />
    <!-- Updating fields from the internet.  -->
    <item name="TAG_FIELD_USAGE" type="id" />
    <!-- END View tags -->

    <!-- BEGIN predefined AsyncTask IDs needed for TaskBase child classes. -->
    <item name="TASK_ID_GET_BOOKLIST" type="id" />

    <item name="TASK_ID_IMPORT" type="id" />
    <item name="TASK_ID_EXPORT" type="id" />

    <item name="TASK_ID_UPDATE_FIELDS" type="id" />

    <!-- Specific ISFDB task used in the 'edit book TOC' fragment. -->
    <item name="TASK_ID_ISFDB_EDITIONS" type="id" />
    <!-- Specific ISFDB task used in the 'edit book TOC' fragment. -->
    <item name="TASK_ID_ISFDB_GET_BOOK" type="id" />

    <!-- not an actual task, but this serves to identify messages from the SearchCoordinator -->
    <item name="TASK_ID_SEARCH_COORDINATOR" type="id" />

    <item name="TASK_ID_LT_VALIDATE_KEY" type="id" />

    <item name="TASK_ID_GR_REQUEST_AUTH" type="id" />
    <item name="TASK_ID_GR_SEND_ONE_BOOK" type="id" />
    <item name="TASK_ID_GR_SEND_BOOKS" type="id" />
    <item name="TASK_ID_GR_IMPORT" type="id" />
    <item name="TASK_ID_GR_GET_WORKS" type="id" />

    <!-- END predefined AsyncTask IDs -->

</resources>
