        <item>@string/lbl_edition_first_edition</item>
        <item>@string/lbl_edition_first_impression</item>
        <item>@string/lbl_edition_limited</item>
        <item>@string/lbl_edition_slipcase</item>
        <item>@string/lbl_edition_book_club</item>
    </string-array>
    <!-- multi-select: use bitmask values: 1,2,4,8,... NEWTHINGS: edition.-->
    <string-array name="pv_bob_filter_edition">
        <!-- Book#EDITION_FIRST = 1 -->
        <item>1</item>
        <!-- Book#EDITION_FIRST_IMPRESSION = 1 << 1 -->
        <item>2</item>
        <!-- Book#EDITION_LIMITED = 1 << 2 -->
        <item>4</item>
        <!-- Book#EDITION_SLIPCASE = 1 << 3 -->
        <item>8</item>
        <!-- Book#EDITION_BOOK_CLUB = 1 << 7 -->
        <item>128</item>
    </string-array>

