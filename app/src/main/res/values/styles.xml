<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- *************************************************************************************** -->
    <!-- Fields. Read-only text. -->
    <!-- *************************************************************************************** -->

    <!-- Base style; not to be used directly in layouts. -->
    <style name="Field">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- Field labels. -->
    <style name="Field.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <!-- 'medium' detail field; for example Series title, ... -->
    <style name="Field.Generic">
        <item name="android:layout_marginStart">@dimen/indent_field</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Field.Generic.Inline">
        <item name="layout_goneMarginStart">@dimen/indent_field</item>
        <item name="android:layout_marginStart">@dimen/indent_field_inline</item>
    </style>

    <!-- 'minor' detail field; for example format, isbn,... -->
    <style name="Field.Generic.Small">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Field.Generic.Inline.Small">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!-- Book title (also used for TOC titles) gets a distinct style. -->
    <style name="Field.BookTitle">
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Book title gets a distinct style. -->
    <style name="Field.BookTitle.Large">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Field.Isbn" parent="Field.Generic">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Field.Isbn.Small">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!-- Book personal notes. -->
    <style name="Field.Notes">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Book Description. -->
    <style name="Field.Description">
        <item name="android:layout_marginTop">@dimen/border1</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:background">@drawable/outline_rounded</item>
    </style>

    <!-- On loan to X. -->
    <style name="Field.OnLoanBar">
        <item name="android:paddingStart">@dimen/indent2</item>
        <item name="android:paddingEnd">@dimen/indent2</item>
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?attr/colorSurface</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Read-only text -->
    <!-- *************************************************************************************** -->

    <!-- Base style; not to be used directly in layouts. -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Text.Header">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="Text.Body">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Text.Body.Small">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Edit fields; An 'Envelope' is normally a TextInputLayout, but see 'Envelope.Button' -->
    <!-- *************************************************************************************** -->

    <!-- slight misnomer as this is not an Envelope, but this way the naming
         is in line with "Envelope.EditText";
          i.e. a (secondary) Button next to an EditText. -->
    <style name="Envelope.Button"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/icon_button_width</item>
        <item name="android:layout_height">0dp</item>
        <item name="iconTint">?attr/editTextColor</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!-- parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" -->
    <!-- parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense" -->
    <style name="Envelope.EditText"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/envelope_edit_text_margin</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <!-- a fixed width box for a 4-digit year. -->
    <style name="Envelope.EditText.Year">
        <item name="android:hint">@string/lbl_year</item>
        <item name="android:layout_width">120dp</item>
    </style>

    <style name="Envelope.EditText.Isbn">
        <item name="android:hint">@string/lbl_isbn</item>
        <item name="startIconDrawable">@drawable/ic_check</item>
        <item name="startIconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Envelope.EditText.SeriesNum">
        <item name="android:layout_width">200dp</item>
    </style>

    <!-- Reminder: AutoCompleteTextView is automatically replaced with MaterialAutoCompleteTextView -->
    <style name="Envelope.AutoCompleteTextView"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/envelope_edit_text_margin</item>
        <!-- make the drop down arrow better visible. -->
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <!-- Base style for all EditText and AutoComplete; not to be used directly in layouts. -->
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText.Spinner">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <!-- A disabled edit text field, {@link com.google.android.material.textfield.TextInputEditText}
        on which an onClickListener can be installed. Without the latter, it behaves like a read-only EditText. -->
    <style name="EditText.ReadOnly">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <!-- Base style for Localized field; not to be used directly in layouts. -->
    <style name="EditText.AutoComplete">
        <!-- default threshold is 1 which when used with Field formatters can get very tricky -->
        <item name="android:completionThreshold">2</item>
    </style>
    <!-- Base style for Localized field; not to be used directly in layouts. -->
    <style name="EditText.AutoComplete.Title" />
    <!-- Base style for Localized field; not to be used directly in layouts. -->
    <style name="EditText.Title" />
    <!-- Base style for Localized field; not to be used directly in layouts. -->
    <style name="EditText.Notes" />
    <!-- Base style for Localized field; not to be used directly in layouts. -->
    <style name="EditText.AutoComplete.Name" />

    <style name="EditText.SeriesNumber">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Year">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">4</item>
    </style>

    <!-- International three character currency code (uppercase) -->
    <style name="EditText.Currency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:inputType">text|textCapCharacters</item>
        <item name="android:ems">5</item>
        <item name="android:maxLength">3</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- On bigger screens, we increase the text size: See the "w340dp-h330dp" styles.xml -->
    <style name="EditText.Isbn">
        <item name="android:digits">1234567890xX</item>
        <!-- the inputType is IGNORED when the field is a {@link EditIsbn} -->
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Keys on the isbn search keyboard. -->
    <!-- *************************************************************************************** -->

    <!-- Base style for the isbn search keyboard; not to be used directly in layouts. -->
    <style name="IsbnKeyPad" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/isbn_key_pad_key_margin</item>
        <item name="android:layout_marginEnd">@dimen/isbn_key_pad_key_margin</item>
    </style>

    <!-- 0..9 and X -->
    <style name="IsbnKeyPad.NumberButton">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="IsbnKeyPad.SearchButton">
    </style>

    <style name="IsbnKeyPad.BackspaceButton">
        <item name="android:paddingLeft">@dimen/isbn_key_pad_backspace_button_icon_padding_left</item>
        <item name="android:layout_width">@dimen/isbn_key_pad_backspace_button_width</item>
        <item name="icon">@drawable/ic_backspace</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Rows in a list -->
    <!-- *************************************************************************************** -->

    <!-- Some sort of button in a row; not to be used directly in layouts -->
    <style name="RowButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border2</item>
    </style>

    <!-- CheckBox - editable checkbox with custom icon -->
    <style name="RowButton.Checkable">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:button">?android:attr/textCheckMark</item>
    </style>

    <!-- ImageButton - 'delete this row' -->
    <style name="RowButton.Delete">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- ImageView - handle to let the user drag & drop rows to re-order them -->
    <style name="RowButton.DragHandle">
        <item name="android:src">@drawable/ic_reorder</item>
    </style>

    <!-- LinearLayout/ConstraintLayout - the details part of the row in a list row. -->
    <style name="RowTextSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- a row inside a list details row; not to be used directly in layouts -->
    <style name="RowTextLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- Primary row inside a list details row. -->
    <style name="RowTextLine.Primary">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <!-- Secondary rows inside a list details row. -->
    <style name="RowTextLine.Secondary">
        <item name="android:textAppearance">?attr/textAppearanceListItemSecondary</item>
        <item name="android:layout_marginStart">@dimen/indent2</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Cover image  -->
    <!-- *************************************************************************************** -->

    <!-- Cover image. All settings are defaults only and will be adjusted in code. -->
    <style name="CoverImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- padding MUST be 0dp to allow scaling ratio to work properly. -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="CoverImage.Preview">
        <item name="android:layout_width">@dimen/cover_browser_preview_width</item>
        <item name="android:layout_height">@dimen/cover_browser_preview_height</item>
    </style>

    <style name="CoverImage.Gallery">
        <item name="android:layout_width">@dimen/cover_browser_gallery_width</item>
        <item name="android:layout_height">@dimen/cover_browser_gallery_height</item>
    </style>
    <!-- *************************************************************************************** -->
    <!-- Read-only boolean Flags. GONE when false, VISIBLE when true.  -->
    <!-- *************************************************************************************** -->

    <!-- ImageView. Generic Flag. -->
    <style name="Flag">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- ImageView. Indicator a book has been read. -->
    <style name="Flag.Read">
        <item name="android:contentDescription">@string/lbl_read</item>
        <item name="android:src">@drawable/ic_assignment_turned_in</item>
        <item name="android:tint">?attr/colorSecondaryVariant</item>
    </style>

    <!-- ImageView. Indicator a book is a first edition. -->
    <style name="Flag.FirstEdition">
        <item name="android:contentDescription">@string/lbl_edition_first_edition</item>
        <item name="android:src">@drawable/ic_filter_1</item>
    </style>

    <!-- ImageView. Indicator a book is signed. -->
    <style name="Flag.Signed">
        <item name="android:contentDescription">@string/lbl_signed</item>
        <item name="android:src">@drawable/ic_gesture</item>
    </style>

    <!-- ImageView. Indicator a book has been lend out. -->
    <style name="Flag.OnLoan">
        <item name="android:contentDescription">@string/lbl_loaned</item>
        <item name="android:src">@drawable/ic_do_not_disturb</item>
        <item name="android:tint">?attr/colorError</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- BooksOnBookshelf. -->
    <!-- *************************************************************************************** -->

    <!-- Booklist; not to be used directly in layouts -->
    <style name="BoB" />

    <!-- the header on the booklist activity -->
    <style name="BoB.Header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_marginStart">@dimen/indent2</item>
        <item name="android:layout_marginEnd">@dimen/indent2</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="BoB.Header.Small">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <!-- The Group rows in the booklist. -->
    <style name="BoB.Group">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BoB.Group.Level1">
        <item name="android:layout_marginTop">@dimen/bob_row_spacer</item>
    </style>

    <style name="BoB.Group.Level2">
    </style>

    <style name="BoB.Group.Level3">
    </style>

    <!-- The Group rows bullet in the booklist; not to be used directly in layouts -->
    <style name="BoB.Group.Bullet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:src">@drawable/ic_lens</item>
    </style>

    <style name="BoB.Group.Bullet.Level2">
        <item name="android:scaleX">0.3</item>
        <item name="android:scaleY">0.3</item>
    </style>

    <style name="BoB.Group.Bullet.Level3">
        <item name="android:scaleX">0.2</item>
        <item name="android:scaleY">0.2</item>
    </style>

    <!-- The Group rows label in the booklist; not to be used directly in layouts -->
    <style name="BoB.Group.Label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="BoB.Group.Label.Level1">
        <item name="android:paddingTop">@dimen/border1</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BoB.Group.Label.Level2">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="BoB.Group.Label.Level3">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>


    <!-- The content container (MaterialCardView) for a book in the booklist. -->
    <style name="BoB.BookContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/border2</item>
        <item name="contentPadding">@dimen/bob_book_card_padding</item>
        <item name="cardBackgroundColor">?attr/appBookCardBackgroundColor</item>
    </style>

    <!-- A book in the booklist; direct child of the BookContainer. -->
    <style name="BoB.Book">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Text element in a 'book' row -->
    <style name="BoB.Book.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="BoB.Book.Text.Isbn">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <!-- the number has to fit inline -->
    <style name="BoB.Book.Text.SeriesNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/border1</item>
    </style>

    <!-- the title has its own style. -->
    <style name="BoB.Book.Text.Title">
        <item name="android:padding">@dimen/border1</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Dialogs -->
    <!-- *************************************************************************************** -->

    <!-- FrameLayout for a DialogFragment based on a CoordinatorLayout/Toolbar/NestedScrollView.
         FULLSCREEN dialog ONLY -->
    <style name="Dialog.Frame.Fullscreen" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- FrameLayout for a DialogFragment based on a CoordinatorLayout/Toolbar/FrameLayout.
         FLOATING and FULLSCREEN dialog
         Important: in FLOATING mode, the margins are set by code to 0,0,0,"?attr/actionBarSize"
         See com/hardbacknutter/nevertoomanybooks/dialogs/BaseDialogFragment.java#onViewCreated
         -->
    <style name="Dialog.Frame.FloatingAndFullscreen" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!-- Dialog body (content) for a DialogFragment based on a CoordinatorLayout/Toolbar/FrameLayout.
         FLOATING and FULLSCREEN dialog -->
    <style name="Dialog.Body.FloatingAndFullscreen" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">?attr/dialogPreferredPadding</item>
        <item name="android:paddingEnd">?attr/dialogPreferredPadding</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Dialog body (content) for a plain AlertDialog/DialogFragment.
         FLOATING dialog ONLY -->
    <style name="Dialog.Body.Floating" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">?attr/dialogPreferredPadding</item>
        <item name="android:paddingEnd">?attr/dialogPreferredPadding</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- FAB buttons -->
    <!-- *************************************************************************************** -->

    <!-- generic FAB button. -->
    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <!-- FAB buttons that appear as a menu above the actual FAB button. -->
    <style name="FABMenu" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="iconGravity">end</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Single use / specialised styles -->
    <!-- *************************************************************************************** -->

    <style name="AppName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="AppVersion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <!-- ImageButton -->
    <style name="InfoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_info_outline</item>
    </style>

    <!-- Goodreads task/event error message. -->
    <style name="GoodreadsErrorMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:focusable">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <!-- Override for the default to allow 2 lines of text. -->
    <style name="App.SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:maxLines">2</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
