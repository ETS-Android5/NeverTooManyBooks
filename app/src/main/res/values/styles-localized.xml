<resources>
    <!-- *************************************************************************************** -->
    <!-- translators: create a language specific styles-localized.xml file for these styles,
         and modify the "android:inputType" attribute as needed.
    -->
    <!-- *************************************************************************************** -->

    <!-- Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>
    <!-- AutoComplete; Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="acTitleTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- AutoComplete; 'human' names. e.g. Author (first/given), Publisher, ... -->
    <style name="acPersonalNameTextEntry">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>


    <!-- Personal Notes, Description. -->
    <style name="notesTextEntry">
        <item name="android:inputType">textLongMessage|textMultiLine|textCapSentences|textAutoCorrect</item>
    </style>

    <!-- The price LISTED field. This field can come from a search, hence it must be text based. -->
    <style name="priceListedTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- The number of book pages - it's a generic string, not limited to numbers only. -->
    <style name="pagesTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- AutoComplete fields: format, genre, language, color,location. -->
    <style name="autoCompleteTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>
