<resources>
    <!-- *************************************************************************************** -->
    <!-- translators: create a language specific styles-localized.xml file for these styles,
         and modify the "android:inputType" attribute as needed.
    -->
    <!-- *************************************************************************************** -->

    <!-- Simple; Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntry" parent="@style/EditText.Title">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- AutoComplete; Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntryAutoComplete" parent="@style/EditText.AutoComplete.Title">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- 'human' names. e.g. Author, Publisher, ... -->
    <style name="personalNameTextEntry" parent="@style/EditText.AutoComplete.Name">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>

    <!-- Personal Notes, Description. -->
    <style name="notesTextEntry" parent="@style/EditText.Notes">
        <item name="android:inputType">textLongMessage|textMultiLine|textCapSentences|textAutoCorrect</item>
    </style>

    <!-- The price (listed, paid, ... ) fields. -->
    <style name="priceTextEntry" parent="@style/EditText">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!-- Generic single-line fields not listed above-->
    <style name="genericTextEntry" parent="@style/EditText">
        <item name="android:inputType">textCapWords</item>
    </style>
    <!-- Generic single-line fields not listed above-->
    <style name="genericNumberEntry" parent="@style/EditText">
        <item name="android:inputType">number</item>
    </style>
    <!-- Generic AutoComplete fields not listed above -->
    <style name="autoCompleteTextEntry" parent="@style/EditText.AutoComplete">
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>
