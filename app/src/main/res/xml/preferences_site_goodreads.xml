<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/site_goodreads">

        <SwitchPreference
            android:defaultValue="true"
            android:key="goodreads.enabled"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/enabled" />

        <Preference
            android:dependency="goodreads.enabled"
            android:icon="@drawable/ic_baseline_security_24"
            android:key="pa_credentials"
            android:title="@string/lbl_credentials">
        </Preference>

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="goodreads.enabled"
            android:icon="@drawable/ic_baseline_library_books_24"
            android:key="goodreads.search.collect.genre"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/gr_pt_collect_genre" />

    </PreferenceCategory>

</PreferenceScreen>
