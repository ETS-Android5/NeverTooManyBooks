<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/site_calibre">

        <SwitchPreference
            android:defaultValue="true"
            android:key="calibre.showMenu"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/enabled" />

        <EditTextPreference
            android:defaultValue=""
            android:dependency="calibre.showMenu"
            android:icon="@drawable/ic_link"
            android:inputType="textUri|text"
            android:key="calibre.host.url"
            android:selectAllOnFocus="true"
            android:summary="@string/hint_empty_field"
            android:title="@string/lbl_calibre_content_server" />

        <Preference
            android:dependency="calibre.showMenu"
            android:icon="@drawable/ic_security"
            android:key="psk_ca_from_file"
            android:summary="@string/hint_empty_field"
            android:title="@string/lbl_calibre_content_server_ca_cert"
            />
    </PreferenceCategory>

</PreferenceScreen>
