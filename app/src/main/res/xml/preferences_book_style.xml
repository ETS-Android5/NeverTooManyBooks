<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <PreferenceCategory
        android:title="@string/pg_general"
        >

        <EditTextPreference
            android:icon="@drawable/ic_edit"
            android:key="style.booklist.name"
            android:selectAllOnFocus="true"
            android:title="@string/name"
            />

        <PreferenceScreen
            android:icon="@drawable/ic_format_list_bulleted"
            android:key="psk_style_groupings"
            android:title="@string/pg_groupings">
            <intent android:action="BooklistStyleGroups.EDIT"
                />
        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_filter_list"
            android:key="psk_style_filters"
            android:title="@string/pg_filters">

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_read"
                android:entryValues="@array/pv_bob_filter_values"
                android:icon="@drawable/ic_filter_list"
                android:key="style.booklist.filter.read"
                android:title="@string/lbl_read"
                />

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_signed"
                android:entryValues="@array/pv_bob_filter_values"
                android:icon="@drawable/ic_filter_list"
                android:key="style.booklist.filter.signed"
                android:title="@string/lbl_signed"
                />

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_anthology"
                android:entryValues="@array/pv_bob_filter_values"
                android:icon="@drawable/ic_filter_list"
                android:key="style.booklist.filter.anthology"
                android:title="@string/lbl_anthology"
                />

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_loaned"
                android:entryValues="@array/pv_bob_filter_values"
                android:icon="@drawable/ic_filter_list"
                android:key="style.booklist.filter.loaned"
                android:title="@string/lbl_loaned"
                />

            <MultiSelectListPreference
                android:defaultValue="@array/empty_array"
                android:entries="@array/pe_bob_filter_edition"
                android:entryValues="@array/pv_bob_filter_edition"
                android:icon="@drawable/ic_filter_list"
                android:key="style.booklist.filter.editions"
                android:title="@string/lbl_edition"
                />

        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_details"
            android:key="psk_style_show_details"
            android:title="@string/pg_bob_show_details"
            >

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.format"
                android:title="@string/lbl_format"
                />

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.publisher"
                android:title="@string/lbl_publisher"
                />

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.publication.date"
                android:title="@string/lbl_date_published"
                />

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.isbn"
                android:title="@string/lbl_isbn"
                />

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.bookshelves"
                android:title="@string/lbl_bookshelves_long"
                />

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.location"
                android:title="@string/lbl_location"
                />

            <SwitchPreference
                android:defaultValue="false"
                android:key="style.booklist.show.author"
                android:title="@string/lbl_author"
                />
        </PreferenceScreen>

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_directions_run"
            android:key="style.booklist.task.extras"
            android:summaryOff="@string/pt_bob_show_details_uses_task_off"
            android:summaryOn="@string/pt_bob_show_details_uses_task_on"
            android:title="@string/pt_bob_show_details_uses_task"
            />

        <MultiSelectListPreference
            android:defaultValue="@array/empty_array"
            android:entries="@array/pe_bob_header"
            android:entryValues="@array/pv_bob_header"
            android:icon="@drawable/ic_view_headline"
            android:key="style.booklist.show.header"
            android:title="@string/pt_bob_header"
            />

        <!-- default BooklistStyle.SCALE_SMALL == 2 -->
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pe_bob_text_size"
            android:entryValues="@array/pv_bob_text_size"
            android:icon="@drawable/ic_format_size"
            android:key="style.booklist.scale.text"
            android:title="@string/pt_bob_text_size"
            />

    </PreferenceCategory>

    <!-- technically speaking, thumbnails fall under 'Extra Book Details'
        But ths is more user-friendly. -->
    <PreferenceCategory
        android:title="@string/pg_thumbnails"
        >

        <ListPreference
            android:defaultValue="4"
            android:entries="@array/pe_cover_scale_factor"
            android:entryValues="@array/pv_cover_scale_factor"
            android:icon="@drawable/ic_photo_size_select_large"
            android:key="style.booklist.scale.thumbnails"
            android:title="@string/pt_bob_thumbnails_scale" />

        <!-- default BooklistStyle.SCALE_MEDIUM == 4 -->
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_image"
            android:key="style.booklist.show.thumbnails"
            android:title="@string/pt_bob_thumbnails_show"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="psk_style_author"
        android:title="@string/lbl_author"
        >

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_sort_by_alpha"
            android:key="style.booklist.sort.author.given_first"
            android:summaryOff="@string/pv_bob_author_name_family_first"
            android:summaryOn="@string/pv_bob_author_name_given_first"
            android:title="@string/pt_bob_authors_sort"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="psk_style_series"
        android:title="@string/lbl_series"
        >

    </PreferenceCategory>

</PreferenceScreen>