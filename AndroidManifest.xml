<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eleybourn.bookcatalogue"
    android:installLocation="auto"
    android:versionCode="179"
    android:versionName="5.2.2">
    <!--
 2018-08-20: https://developer.android.com/about/dashboards/
        6+      23  ->  66.5%
        5.1+    22  ->  82.6%
        5.0+    21  ->  86.8%
        4.4+    19  ->  95.9%   but 5.0 has "Material" ...
    -->
    <!-- Android 5.0; 8.1 -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".BookCatalogueApp"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher4"
        android:logo="@drawable/ic_launcher4"
        android:theme="@style/ThemeDefault"
        android:allowBackup="true">

        <!-- application developer keys -->
        <meta-data
            android:name="bookcatalogue.amazon.appkey"
            android:value="my_amazon_key" />
        <meta-data
            android:name="bookcatalogue.goodreads.dev_key"
            android:value="my_goodreads_key" />
        <meta-data
            android:name="bookcatalogue.goodreads.dev_secret"
            android:value="my_goodreads_secret" />

        <provider
            android:name=".SearchSuggestionProvider"
            android:authorities="com.eleybourn.bookcatalogue.SearchSuggestionProvider" />

        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="?android:attr/dialogTheme"
            />
        <!-- android:theme="@android:style/Theme.AppCompat.Dialog" -->

        <!-- .BookCatalogue is now just a forwarder to .StartupActivity. -->
        <activity
            android:name=".BookCatalogue"
            android:label="@string/app_name" />

        <!--
            Yet another new application entry point :(
            This allows us on Android 6+ to force the user to grant the needed permissions
            without which the app is useless.
            It will forward to .StartupActivity when granted
        -->
        <activity android:name=".StartupWithSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            The StartupActivity activity is just a forwarder to the users chosen first screen; does not 
			rebuild on orientation changes so progress dialogs are easier 
        -->
        <activity
            android:name=".StartupActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:theme="@style/ThemeInvisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>

        <activity
            android:name=".BookCatalogueClassic"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!--
             The .StartupActivity activity is just a forwarder to the users chosen first screen, which could
			 be the .MainMenu or the .BooksOnBookshelf Activity. So in theory it is OK to make is singleInstance
			    android:launchMode="singleInstance"
        -->
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name" />

        <activity
            android:name=".BooksOnBookshelf"
            android:label="@string/my_books">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!--
            all non-startup activities
         -->
        <activity
            android:name=".Bookshelf"
            android:label="@string/menu_bookshelf" />
        <activity
            android:name=".BookshelfEdit"
            android:label="@string/title_edit_bs" />

        <activity android:name=".BookEdit" />
        <activity
            android:name=".BookISBNSearch"
            android:label="@string/title_isbn_search" />

        <activity android:name=".booklist.BooklistPreferencesActivity" />
        <activity android:name=".booklist.BooklistStyleGroupsActivity" />
        <activity
            android:name=".booklist.BooklistStylePropertiesActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name=".SearchCatalogue" />

        <!--
            Admin/prefs etc....
        -->
        <activity android:name=".TaskListActivity" />
        <activity android:name=".AdministrationAbout" />
        <activity android:name=".AdministrationDonate" />
        <activity android:name=".AdministrationFunctions" />
        <activity android:name=".Help" />

        <activity android:name=".booklist.BooklistStylesActivity" />
        <activity
            android:name=".FieldVisibility"
            android:label="@string/menu_manage_fields" />
        <activity android:name=".OtherPreferences" />
        <activity android:name=".EditAuthorList" />
        <activity android:name=".EditSeriesList" />
        <activity
            android:name=".UpdateFromInternet"
            android:label="@string/update_fields" />
        <activity android:name=".cropper.CropCropImage" />
        <activity android:name=".filechooser.BackupChooser" />

        <!--
            LibraryThing
        -->
        <activity
            android:name=".AdministrationLibraryThing"
            android:label="@string/library_thing" />

        <!--
            Goodreads
        -->
        <activity
            android:name=".goodreads.GoodreadsRegister"
            android:label="@string/goodreads"
            android:launchMode="standard" />
        <activity
            android:name=".goodreads.GoodreadsAuthorizationActivity"
            android:launchMode="singleInstance">

            <!-- RELEASE: Work out which of these filters we don't need! -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="goodreadsauth"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="goodreadsauth"
                    android:scheme="com.eleybourn.bookcatalogue" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="goodreadsauth"
                    android:scheme="com.eleybourn.bookcatalogue" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.GET" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="goodreadsauth"
                    android:scheme="com.eleybourn.bookcatalogue" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <activity android:name=".goodreads.GoodreadsSearchCriteria" />
        <activity android:name=".goodreads.GoodreadsSearchResults" />
        <activity android:name=".goodreads.GoodreadsExportFailuresActivity" />

        <!--
            Android Studio will add new ones below
        -->
    </application>

</manifest>