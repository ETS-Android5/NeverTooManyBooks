<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="@string/pg_general"
        android:title="@string/pg_general">

        <EditTextPreference
            android:hint="@string/info_tap_to_edit"
            android:key="@string/pk_bob_style_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/name" />

        <PreferenceScreen
            android:icon="@drawable/ic_format_list_bulleted"
            android:key="@string/pg_groupings"
            android:title="@string/pg_groupings">
            <intent android:action="BooklistStyleGroups.EDIT" />
        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_filter_list"
            android:key="@string/pg_filters"
            android:title="@string/pg_filters">

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_read"
                android:entryValues="@array/pv_bob_filter_values"
                android:key="@string/pk_bob_filter_read"
                android:title="@string/lbl_read" />

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_signed"
                android:entryValues="@array/pv_bob_filter_values"
                android:key="@string/pk_bob_filter_signed"
                android:title="@string/lbl_signed" />

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_anthology"
                android:entryValues="@array/pv_bob_filter_values"
                android:key="@string/pk_bob_filter_anthology"
                android:title="@string/lbl_anthology" />

            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pe_bob_filter_loaned"
                android:entryValues="@array/pv_bob_filter_values"
                android:key="@string/pk_bob_filter_loaned"
                android:title="@string/lbl_loaned" />

        </PreferenceScreen>

        <PreferenceScreen
            android:icon="@drawable/ic_details"
            android:key="@string/pg_bob_extra_book_details"
            android:title="@string/pg_bob_extra_book_details">

            <SwitchPreference
                android:defaultValue="false"
                android:key="@string/pk_bob_show_bookshelves"
                android:title="@string/lbl_bookshelves_long" />

            <SwitchPreference
                android:defaultValue="false"
                android:key="@string/pk_bob_show_location"
                android:title="@string/lbl_location" />

            <SwitchPreference
                android:defaultValue="false"
                android:key="@string/pk_bob_show_publisher"
                android:title="@string/lbl_publisher" />

            <SwitchPreference
                android:defaultValue="false"
                android:key="@string/pk_bob_show_format"
                android:title="@string/lbl_format" />

            <SwitchPreference
                android:defaultValue="false"
                android:key="@string/pk_bob_show_author"
                android:title="@string/lbl_author" />
        </PreferenceScreen>

        <MultiSelectListPreference
            android:defaultValue="@array/empty_array"
            android:entries="@array/pe_bob_header"
            android:entryValues="@array/pv_bob_header"
            android:icon="@drawable/ic_view_headline"
            android:key="@string/pk_bob_header"
            android:title="@string/pt_bob_header" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pe_bob_item_size"
            android:entryValues="@array/pv_bob_item_size"
            android:icon="@drawable/ic_format_size"
            android:key="@string/pk_bob_item_size"
            android:title="@string/pt_bob_item_size" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/lbl_author"
        android:title="@string/lbl_author">

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_sort_by_alpha"
            android:key="@string/pk_bob_sort_author_name"
            android:summaryOff="@string/pv_bob_format_author_name_family_first"
            android:summaryOn="@string/pv_bob_format_author_name_given_first"
            android:title="@string/pt_bob_sort_author_name" />

    </PreferenceCategory>

    <PreferenceCategory
        android:visibility="gone"
        android:key="@string/lbl_series"
        android:title="@string/lbl_series">

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/pg_thumbnails"
        android:title="@string/pg_thumbnails">

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_image"
            android:key="@string/pk_bob_thumbnails_show"
            android:title="@string/pt_bob_thumbnails_show" />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_photo_size_select_large"
            android:key="@string/pk_bob_thumbnails_show_large"
            android:title="@string/pt_bob_thumbnails_show_large" />

    </PreferenceCategory>

</PreferenceScreen>