<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================ -->
    <!-- Day/Night theme. -->
    <!-- ================ -->
    <style name="AppTheme.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/grey_200</item>
        <item name="checked_icon_tint">@color/light_green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!--  =========================== -->
        <!-- Theme Color palette -->
        <!--  =========================== -->

        <!-- The primary branding color for the app. By default, this is the color applied to the
            action bar background. -->
        <item name="colorPrimary">@color/blue_500</item>
        <!-- Dark variant of the primary branding color. By default, this is the color applied to
            the status bar (via statusBarColor) and navigation bar (via navigationBarColor). -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <!-- Bright complement to the primary branding color. By default, this is the color applied
             to framework controls (via colorControlActivated). -->
        <item name="colorAccent">@color/blue_a200</item>

    </style>

</resources>