<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/padding_border"
        android:paddingStart="@dimen/padding_border">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/inc_toolbar_frame" />

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/toolbar_frame">

            <Spinner
                android:id="@+id/bookshelf_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/bookshelf_name"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="gone"
                tools:text="the search text" />

            <TextView
                android:id="@+id/bookshelf_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/search_text"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="@string/displaying_n_books_in_m_entries" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookshelf_count"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/level_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="level 2 text" />

                <TextView
                    android:id="@+id/level_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="level 2 text" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/header_divider"
            style="@style/main_menu_header_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/header"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_divider"
            android:orientation="vertical">

            <com.eleybourn.bookcatalogue.widgets.FastScrollListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/android:empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nobooks"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/booksonbookshelf_nav_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>