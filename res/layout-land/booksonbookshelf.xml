<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_border"
            android:paddingEnd="@dimen/padding_border">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/toolbar" />

            <!-- the header with the Bookshelf Spinner and information lines -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/bookshelf_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="2dp"
                    tools:text="@string/lbl_bookshelf" />

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookshelf_name"
                    android:layout_alignParentStart="true"
                    android:paddingStart="@dimen/padding_border"
                    android:paddingEnd="@dimen/padding_border"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone"
                    tools:text="the search text" />

                <TextView
                    android:id="@+id/bookshelf_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search_text"
                    android:layout_alignParentStart="true"
                    android:paddingStart="@dimen/padding_border"
                    android:paddingEnd="@dimen/padding_border"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textIsSelectable="false"
                    tools:text="@string/displaying_n_books_in_m_entries" />

                <TextView
                    android:id="@+id/level_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookshelf_count"
                    android:paddingStart="@dimen/padding_border"
                    android:paddingEnd="@dimen/padding_border"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textIsSelectable="false"
                    tools:text="level 1 text" />

                <TextView
                    android:id="@+id/level_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level_1_text"
                    android:paddingStart="@dimen/padding_border"
                    android:paddingEnd="@dimen/padding_border"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textIsSelectable="false"
                    tools:text="level 2 text" />
            </RelativeLayout>

            <View
                android:id="@+id/header_divider"
                style="@style/divider_horizontalList"
                android:layout_below="@id/header"
                android:paddingBottom="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header_divider"
                android:orientation="vertical">

                <com.eleybourn.bookcatalogue.widgets.FastScrollListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp" />

                <TextView
                    android:id="@android:id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_no_books_yet"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
    <!-- Container for contents of drawer
         use NavigationView to make configuration easier
    -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_panel_header"
        app:menu="@menu/nav_panel" />
</androidx.drawerlayout.widget.DrawerLayout>