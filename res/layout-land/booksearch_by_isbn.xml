<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_border" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            tools:text="TOOLBAR" />

        <!-- digits: 0..9X for ISBN, but ASIN allows more -->
        <EditText
            android:id="@+id/isbn"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/isbn"
            android:inputType="text"
            android:padding="@dimen/padding_border_double"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="Autofill" >
            <requestFocus/>
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/isbn_1"
                style="@style/isbnSearchKey"
                android:text="1"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_2"
                style="@style/isbnSearchKey"
                android:text="2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_3"
                style="@style/isbnSearchKey"
                android:text="3"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_4"
                style="@style/isbnSearchKey"
                android:text="4"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_5"
                style="@style/isbnSearchKey"
                android:text="5"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_6"
                style="@style/isbnSearchKey"
                android:text="6"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/isbn_7"
                style="@style/isbnSearchKey"
                android:text="7"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_8"
                style="@style/isbnSearchKey"
                android:text="8"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_9"
                style="@style/isbnSearchKey"
                android:text="9"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_0"
                style="@style/isbnSearchKey"
                android:text="0"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/isbn_X"
                style="@style/isbnSearchKey"
                android:text="X"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/isbn_del"
                style="@style/isbnSearchKey"
                app:srcCompat="@drawable/ic_backspace"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/asinCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allow_asin"
                />

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>