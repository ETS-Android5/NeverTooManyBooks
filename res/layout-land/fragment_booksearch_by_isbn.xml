<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/border1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BookSearchActivity"
    >

    <CheckBox
        android:id="@+id/allow_asin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border2"
        android:text="@string/lbl_allow_asin"
        app:layout_constraintBaseline_toBaselineOf="@id/isbn"
        app:layout_constraintEnd_toStartOf="@id/isbn"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/isbn"
        style="@style/EditText.Isbn.Large"
        app:layout_constraintEnd_toStartOf="@id/btn_search"
        app:layout_constraintStart_toEndOf="@id/allow_asin"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,LabelFor"
        />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_search"
        app:layout_constraintBaseline_toBaselineOf="@id/isbn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/isbn"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="allow_asin,isbn,btn_search"
        />

    <Button
        android:id="@+id/isbn_1"
        style="@style/IsbnSearchKey"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/isbn_6"
        app:layout_constraintEnd_toStartOf="@id/isbn_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrierTop"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_2"
        style="@style/IsbnSearchKey"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@id/isbn_7"
        app:layout_constraintEnd_toStartOf="@id/isbn_3"
        app:layout_constraintStart_toEndOf="@id/isbn_1"
        app:layout_constraintTop_toBottomOf="@id/barrierTop"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_3"
        style="@style/IsbnSearchKey"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@id/isbn_8"
        app:layout_constraintEnd_toStartOf="@id/isbn_4"
        app:layout_constraintStart_toEndOf="@id/isbn_2"
        app:layout_constraintTop_toBottomOf="@id/barrierTop"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_4"
        style="@style/IsbnSearchKey"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/isbn_9"
        app:layout_constraintEnd_toStartOf="@id/isbn_5"
        app:layout_constraintStart_toEndOf="@id/isbn_3"
        app:layout_constraintTop_toBottomOf="@id/barrierTop"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_5"
        style="@style/IsbnSearchKey"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@id/isbn_0"
        app:layout_constraintEnd_toStartOf="@id/isbn_X"
        app:layout_constraintStart_toEndOf="@id/isbn_4"
        app:layout_constraintTop_toBottomOf="@id/barrierTop"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_X"
        style="@style/IsbnSearchKey"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@id/isbn_del"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/isbn_5"
        app:layout_constraintTop_toBottomOf="@id/barrierTop"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_6"
        style="@style/IsbnSearchKey"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isbn_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isbn_1"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_7"
        style="@style/IsbnSearchKey"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isbn_8"
        app:layout_constraintStart_toEndOf="@id/isbn_6"
        app:layout_constraintTop_toBottomOf="@id/isbn_2"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_8"
        style="@style/IsbnSearchKey"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isbn_9"
        app:layout_constraintStart_toEndOf="@id/isbn_7"
        app:layout_constraintTop_toBottomOf="@id/isbn_3"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_9"
        style="@style/IsbnSearchKey"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isbn_0"
        app:layout_constraintStart_toEndOf="@id/isbn_8"
        app:layout_constraintTop_toBottomOf="@id/isbn_4"
        tools:ignore="HardcodedText"
        />

    <Button
        android:id="@+id/isbn_0"
        style="@style/IsbnSearchKey"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isbn_del"
        app:layout_constraintStart_toEndOf="@id/isbn_9"
        app:layout_constraintTop_toBottomOf="@id/isbn_5"
        tools:ignore="HardcodedText"
        />

    <ImageButton
        android:id="@+id/isbn_del"
        style="@style/IsbnSearchKey.Del"
        android:contentDescription="@string/menu_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/isbn_0"
        app:layout_constraintTop_toBottomOf="@id/isbn_X"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
