<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tlv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/border_double"
    >

    <CheckBox
        android:id="@+id/is_anthology"
        style="@style/editCheckbox"
        android:text="@string/lbl_is_anthology"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        />

    <CheckBox
        android:id="@+id/multiple_authors"
        style="@style/editCheckbox"
        android:text="@string/lbl_toc_multiple_authors"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/is_anthology"
        tools:checked="true"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirm_add"
        app:layout_constraintBottom_toBottomOf="@id/multiple_authors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/div1"
        style="@style/div_horizontal"
        app:layout_constraintTop_toBottomOf="@id/multiple_authors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.eleybourn.bookcatalogue.widgets.TouchListView
        android:id="@android:id/list"
        style="@style/tlv_TouchListView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div1"
        tlv:grabber="@id/TLV_ROW_GRABBER"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
