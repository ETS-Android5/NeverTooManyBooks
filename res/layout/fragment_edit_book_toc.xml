<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tlv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/border_double">

    <CheckBox
        android:id="@+id/same_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_toc_same_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/author"
        style="@style/personalNameTextEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/same_author" />

    <EditText
        android:id="@+id/title"
        style="@style/titleTextEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/first_publication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_first_publication"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirm_add"
        app:layout_constraintBaseline_toBaselineOf="@id/first_publication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/first_publication" />

    <com.eleybourn.bookcatalogue.widgets.TouchListView
        android:id="@android:id/list"
        style="@style/tlv_TouchListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        tlv:grabber="@id/TLV_ROW_GRABBER" />

</androidx.constraintlayout.widget.ConstraintLayout>
