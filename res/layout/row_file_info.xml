<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/SLA_ROW"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:srcCompat="@drawable/bc_archive"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/name"
        style="@style/txt_row_fileName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/padding_border"
        android:layout_toEndOf="@id/icon"
        tools:text="fred.txt" />

    <RelativeLayout
        android:id="@+id/file_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/icon">

        <TextView
            android:id="@+id/file_content"
            style="@style/txt_row_fileInfo"
            android:layout_marginTop="@dimen/padding_border"
            android:paddingStart="@dimen/padding_book_details_text"
            android:paddingEnd="@dimen/padding_book_details_text"
            tools:text="1023 books, 3 covers,..." />

        <TextView
            android:id="@+id/size"
            style="@style/txt_row_fileInfo"
            android:layout_width="wrap_content"
            android:layout_below="@id/file_content"
            android:layout_marginTop="@dimen/padding_border"
            android:paddingStart="@dimen/padding_book_details_text"
            android:paddingEnd="@dimen/padding_book_details_text"
            tools:text="10 Mb" />

        <TextView
            android:id="@+id/date"
            style="@style/txt_row_fileInfo"
            android:layout_width="wrap_content"
            android:layout_below="@id/file_content"
            android:layout_marginTop="@dimen/padding_border"
            android:layout_toEndOf="@id/size"
            android:paddingStart="@dimen/padding_book_details_text"
            android:paddingEnd="@dimen/padding_book_details_text"
            tools:text="1 Jan, 2011 17:54:32" />
    </RelativeLayout>
</RelativeLayout>