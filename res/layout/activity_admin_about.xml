<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_border"
            android:paddingStart="@dimen/padding_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_number"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_border"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textIsSelectable="true" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:text="@string/website_lbl"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/website"
                style="@style/link_url"
                android:text="@string/website" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:text="@string/sourcecode_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/sourcecode"
                style="@style/link_url"
                android:text="@string/sourcecode" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:text="@string/contact_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/contact1"
                style="@style/link_url"
                android:text="@string/contact1" />

            <TextView
                android:id="@+id/contact2"
                style="@style/link_url"
                android:text="@string/contact2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:text="@string/special_thanks_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_border"
                android:paddingEnd="@dimen/padding_border_triple"
                android:paddingStart="@dimen/padding_border_triple"
                android:text="@string/translators_blurb"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_border"
                android:paddingStart="@dimen/padding_border"
                android:text="@string/amazon"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/amazon_links_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_border"
                android:paddingEnd="@dimen/padding_border_triple"
                android:paddingStart="@dimen/padding_border_triple"
                android:text="@string/hint_amazon_links_blurb"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>