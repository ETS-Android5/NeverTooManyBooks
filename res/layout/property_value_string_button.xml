<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/propertyValue">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/padding_border"
        android:paddingStart="@dimen/padding_border">
        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:hint="@string/edit"
            app:srcCompat="@android:drawable/ic_menu_edit"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/frame"
        android:paddingTop="@dimen/padding_border"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="some name" />

    <TextView
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/name"
        android:layout_toStartOf="@id/frame"
        android:paddingEnd="@dimen/padding_border"
        android:paddingStart="@dimen/padding_border"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="some value" />

     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="?android:attr/dividerHorizontal"
        tools:ignore="ContentDescription" />
</RelativeLayout>