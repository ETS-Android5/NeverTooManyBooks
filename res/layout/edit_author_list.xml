<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_border"
    android:paddingEnd="@dimen/padding_border">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:gravity="top"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/author"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionThreshold="2"
            android:hint="@string/author"
            style="@style/personalNameTextEntry"
            android:nextFocusDown="@+id/title"
            android:paddingStart="@dimen/padding_border"
            android:paddingEnd="@dimen/padding_border"/>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/add"
            />
    </LinearLayout>

    <com.eleybourn.bookcatalogue.widgets.TouchListView
        xmlns:tlv="http://schemas.android.com/apk/res/com.eleybourn.bookcatalogue"
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonbar_cancel_save"
        android:layout_below="@+id/top_buttons"
        android:textSize="16sp"
        tlv:grabber="@+id/grabber"
        tlv:normal_height="64dip"
        tlv:remove_mode="none" />

    <TextView
        android:id="@+id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonbar_cancel_save"
        android:layout_below="@+id/top_buttons"
        android:text="@string/noauthors"
        android:textSize="16sp" />

    <include
        android:id="@+id/buttonbar_cancel_save"
        layout="@layout/inc_buttonbar_cancel_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>