<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialogFrame"
    >

    <TextView
        android:id="@+id/lbl_info"
        style="@style/sectionHeader"
        android:text="@string/export_options_dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <include
        android:id="@+id/import_export_options"
        layout="@layout/inc_import_export_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_info"
        />

    <TextView
        android:id="@+id/export_advanced_date_blurb"
        style="@style/sectionHeader"
        android:text="@string/export_option_info_books_since_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/import_export_options"
        />

    <RadioGroup
        android:id="@+id/radio_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/export_advanced_date_blurb"
        >

        <RadioButton
            android:id="@+id/radioAllBooks"
            style="@style/row_option_checkable"
            android:checked="true"
            android:text="@string/all_books"
            />

        <RadioButton
            android:id="@+id/radioSinceLastBackup"
            style="@style/row_option_checkable"
            android:text="@string/export_option_books_since_last_full_backup"
            />

        <!-- This option and the related date/button below are disabled to reduce complexity
         of the UI and app; may enable one day. Deemed to be too rarely of use. -->
        <RadioButton
            android:id="@+id/radioSinceDate"
            style="@style/row_option_checkable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/export_option_books_since_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:inputType="date"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/date_button"
        app:layout_constraintEnd_toStartOf="@id/date_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_buttons"
        tools:ignore="LabelFor,Autofill"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8230;"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtDate"
        app:layout_constraintTop_toBottomOf="@id/radio_buttons"
        tools:ignore="HardcodedText"
        tools:visibility="visible"
        />

    <include
        android:id="@+id/buttonbar_cancel_ok"
        layout="@layout/inc_buttonbar_cancel_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
