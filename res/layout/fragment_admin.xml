<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/border"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AdminActivity"
    >

    <!-- DATA IMPORT/EXPORT -->

    <TextView
        style="@style/menuSectionHeader"
        android:text="@string/lbl_data_import_export"
        />

    <TextView
        android:id="@+id/lbl_backup"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_save"
        android:text="@string/lbl_backup"
        />

    <TextView
        android:id="@+id/lbl_import_from_archive"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_file_download"
        android:text="@string/lbl_import_from_archive"
        />

    <TextView
        android:id="@+id/lbl_export"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_save"
        android:text="@string/lbl_export_to_csv"
        />

    <TextView
        android:id="@+id/lbl_import"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_file_download"
        android:text="@string/lbl_import_from_csv"
        />

    <!-- GoodReads -->

    <TextView
        style="@style/menuSectionHeader"
        android:text="@string/goodreads"
        />

    <TextView
        android:id="@+id/lbl_sync_with_goodreads"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_autorenew"
        android:text="@string/gr_sync_with_goodreads"
        />

    <TextView
        android:id="@+id/lbl_import_all_from_goodreads"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_file_download"
        android:text="@string/gr_import_all_from_goodreads"
        />

    <TextView
        android:id="@+id/lbl_send_updated_books_to_goodreads"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_send"
        android:text="@string/gr_btn_send_updated"
        />

    <TextView
        android:id="@+id/lbl_send_all_books_to_goodreads"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_file_upload"
        android:text="@string/gr_btn_send_all"
        />

    <TextView
        android:id="@+id/lbl_background_tasks"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_format_list_bulleted"
        android:text="@string/gr_tq_menu_background_tasks"
        />

    <!-- ADVANCED OPTIONS Header -->

    <TextView
        style="@style/menuSectionHeader"
        android:text="@string/lbl_advanced_options"
        />

    <TextView
        android:id="@+id/lbl_update_internet"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_content_copy"
        android:text="@string/lbl_update_fields"
        />


    <TextView
        android:id="@+id/lbl_reset_hints"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_undo"
        android:text="@string/hint_reset_all_hints"
        />

    <TextView
        android:id="@+id/lbl_erase_cover_cache"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_close"
        android:text="@string/erase_cover_cache"
        />

    <TextView
        android:id="@+id/lbl_copy_database"
        style="@style/row_option_menu"
        android:drawableStart="@drawable/ic_save"
        android:text="@string/menu_copy_database"
        />

</LinearLayout>
