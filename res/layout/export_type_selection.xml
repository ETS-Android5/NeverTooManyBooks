<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_border" >

        <TextView
            android:id="@+id/export_books_blurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_border_triple"
            android:text="@string/export_books_blurb"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/all_books_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp" >

            <RadioButton
                android:id="@+id/all_books_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="false"
                android:focusable="false"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/all_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/all_books_radio"
                android:layout_alignBottom="@id/all_books_radio"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/all_books_radio"
                android:text="@string/all_books"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/all_books_blurb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/all_books"
                android:layout_alignEnd="@id/all_books"
                android:layout_below="@+id/all_books"
                android:text="@string/export_all_blurb"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/advanced_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp" >

            <RadioButton
                android:id="@+id/advanced_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="false"
                android:focusable="false"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/advanced_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/advanced_radio"
                android:layout_alignBottom="@id/advanced_radio"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/advanced_radio"
                android:text="@string/advanced_options"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/export_advanced_blurb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/advanced_options"
                android:layout_alignEnd="@+id/advanced_options"
                android:layout_below="@+id/advanced_options"
                android:text="@string/export_advanced_blurb"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>