<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <CheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        />

    <TextView
        android:id="@+id/title"
        style="@style/txt_detail_medium"
        android:layout_width="0dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/checked"
        app:layout_constraintEnd_toStartOf="@id/retry"
        app:layout_constraintStart_toEndOf="@id/checked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="I, Robot"
        tools:ignore="SelectableText"
        />

    <TextView
        android:id="@+id/author"
        style="@style/txt_detail_medium"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/retry"
        app:layout_constraintStart_toEndOf="@id/checked"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Asimov, Isaac"
        tools:ignore="SelectableText"
        />

    <TextView
        android:id="@+id/error"
        style="@style/error_message"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/retry"
        app:layout_constraintStart_toEndOf="@id/checked"
        app:layout_constraintTop_toBottomOf="@id/author"
        tools:ignore="SelectableText"
        tools:text="Last error: foo bar, not sure what really happened"
        />

    <TextView
        android:id="@+id/date"
        style="@style/txt_detail_small"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/retry"
        app:layout_constraintStart_toEndOf="@id/checked"
        app:layout_constraintTop_toBottomOf="@id/error"
        tools:text="July 20, 2012 17:45:32 GMT"
        tools:ignore="SelectableText"
        />

    <Button
        android:id="@+id/retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/retry"
        app:layout_constraintBaseline_toBaselineOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>