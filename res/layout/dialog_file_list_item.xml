<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/ROW"
    style="@style/dialogFrame">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="some filename"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/updated_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/name"
        android:layout_marginTop="4dp"
        android:text="@string/updated"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updated_label"
        android:layout_alignBottom="@+id/updated_label"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/updated_label"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Fri, 23 July, 17:54:01 2011"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/updated_label"
        android:layout_marginTop="4dp"
        android:text="@string/size"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/size_label"
        android:layout_alignBottom="@+id/size_label"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/size_label"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="154kb"
        tools:ignore="SelectableText" />

    <LinearLayout
        android:id="@+id/path_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/size_label"
        android:layout_marginTop="4sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/path_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2sp"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="/mnt/sdcard/foobar/bookCatalogue/path/asd/asd/asd/asd/as/da/sd/asd"
            android:textIsSelectable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/path_info" />

</RelativeLayout>