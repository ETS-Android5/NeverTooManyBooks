<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/row_option_property"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        style="@style/lbl_property_name"
        android:labelFor="@id/value"
        tools:ignore="LabelFor"
        tools:text="name of property" />

    <EditText
        android:id="@+id/value"
        style="@style/simpleTextEntry"
        android:layout_below="@id/name"
        tools:ignore="Autofill"
        tools:text="current value" />

    <View style="@style/divider_horizontalList" />

</RelativeLayout>