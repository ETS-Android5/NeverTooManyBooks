<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- we *may* need the RadioButton; it's used as 'selector' in the item interface, but not always implemented -->
    <RadioButton
        android:id="@+id/selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:text=""
        android:visibility="gone" />

    <!-- what the user sees, with a drawable (icon) added from code -->
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/selector"
        android:drawablePadding="@dimen/padding_border"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_border"
        android:singleLine="false"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:drawableStart="@drawable/ic_image"
        tools:text="menu item" />

    <View
        style="@style/divider_horizontalList"
        android:visibility="invisible" />

</RelativeLayout>