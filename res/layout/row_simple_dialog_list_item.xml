<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- what the user sees, with a drawable (icon) added from code -->
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/border_double"
        android:layout_margin="@dimen/border_double"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:drawableStart="@drawable/ic_image"
        tools:text="menu item" />

    <!-- we *may* need the RadioButton; it's used as 'selector' in the item interface, but not always implemented -->
    <RadioButton
        android:id="@+id/selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text=""
        android:visibility="gone" />

</LinearLayout>