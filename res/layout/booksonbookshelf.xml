<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_border"
            android:paddingStart="@dimen/padding_border">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/toolbar"
                tools:text="TOOLBAR" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                app:fabSize="mini"
                android:src="@android:drawable/ic_menu_add"
                android:layout_margin="16dp" />
            <!--android:layout_gravity="end|bottom"-->

            <!-- the header with the Bookshelf Spinner and information lines -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/bookshelf_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="2dp"
                    tools:text="@string/bookshelf" />

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/bookshelf_name"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="gone"
                    tools:text="the search text" />

                <TextView
                    android:id="@+id/bookshelf_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/search_text"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="@string/displaying_n_books" />

                <TextView
                    android:id="@+id/level_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookshelf_count"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="level 1 text"/>

                <TextView
                    android:id="@+id/level_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level_1_text"
                    android:paddingEnd="@dimen/padding_border"
                    android:paddingStart="@dimen/padding_border"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="level 2 text"/>
            </RelativeLayout>

            <View
                android:id="@+id/header_divider"
                style="@style/listDivider"
                android:layout_below="@id/header"
                android:paddingBottom="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header_divider"
                android:orientation="vertical">

                <com.eleybourn.bookcatalogue.widgets.FastScrollListView
                    android:id="@id/android:list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp" />

                <TextView
                    android:id="@id/android:empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nobooks"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <!-- Container for contents of drawer
         use NavigationView to make configuration easier
    -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav__panel_header"
        app:menu="@menu/drawer_view" />
</android.support.v4.widget.DrawerLayout>