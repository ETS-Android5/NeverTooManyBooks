<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_border" >

        <TextView
            android:id="@+id/import_books_blurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_border_triple"
            android:text="@string/import_books_blurb"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/all_books_row"
            style="@style/option_row">

            <RadioButton
                android:id="@+id/all_books"
                android:text="@string/all_books"
                style="@style/option_button" />

            <TextView
                android:id="@+id/all_books_blurb"
                style="@style/option_blurb"
                android:layout_alignStart="@id/all_books"
                android:layout_below="@id/all_books"
                android:text="@string/all_books_blurb"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_and_changed_books_row"
            style="@style/option_row">

            <RadioButton
                android:id="@+id/new_and_changed_books"
                android:text="@string/new_and_changed_books"
                style="@style/option_button" />

            <TextView
                android:id="@+id/new_and_changed_books_blurb"
                style="@style/option_blurb"
                android:layout_alignStart="@+id/new_and_changed_books"
                android:layout_below="@id/new_and_changed_books"
                android:text="@string/new_and_changed_books_blurb" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>