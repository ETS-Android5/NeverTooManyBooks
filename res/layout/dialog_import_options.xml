<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogFrame"
    >

    <CheckBox
        android:id="@+id/cbx_books_csv"
        style="@style/OptionRow.Checkable"
        android:checked="true"
        android:text="@string/import_export_option_csv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <CheckBox
        android:id="@+id/cbx_covers"
        style="@style/OptionRow.Checkable"
        android:checked="true"
        android:text="@string/lbl_cover_images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbx_books_csv"
        />

    <CheckBox
        android:id="@+id/cbx_preferences"
        style="@style/OptionRow.Checkable"
        android:checked="true"
        android:text="@string/lbl_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbx_covers"
        />

    <View
        android:id="@+id/footer_divider"
        style="@style/SectionDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbx_preferences"
        />

    <RadioGroup
        android:id="@+id/radio_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/footer_divider"
        >

        <RadioButton
            android:id="@+id/radioAllBooks"
            style="@style/OptionRow.Checkable"
            android:checked="true"
            android:text="@string/bookshelf_all_books"
            />

        <TextView
            android:id="@+id/textView"
            style="@style/OptionRow.Blurb"
            android:text="@string/import_option_info_all_books"
            />

        <RadioButton
            android:id="@+id/radioNewAndUpdatedBooks"
            style="@style/OptionRow.Checkable"
            android:text="@string/import_option_new_and_changed_books"
            />

        <TextView
            android:id="@+id/radioNewAndUpdatedBooksInfo"
            style="@style/OptionRow.Blurb"
            android:text="@string/import_option_info_new_and_changed_books"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
