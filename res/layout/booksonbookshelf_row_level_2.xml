<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/BLB_ROW_DETAILS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- this is really annoying: setting visibility of the ConstraintLayout to GONE
         does NOT shrink it to size zero. You're forced to set all widgets inside also.
         Potentially this could be solved by fiddling with the constraints themselves.
    -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="bullet, name"
        />

    <ImageView
        android:id="@+id/bullet"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_lens"
        android:backgroundTint="?android:attr/colorForeground"
        android:scaleX="0.4"
        android:scaleY="0.4"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/name"
        tools:ignore="ContentDescription"
        />

    <!-- Medium text
        Note that the 'drawableEnd' is done from code. Only here 'tools'.
    -->
    <TextView
        android:id="@+id/name"
        style="BooklistBook.Section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bullet"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableEnd="@drawable/ic_lock"
        tools:text="e.g. Series name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>