<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/SLA_ROW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingTop="3dp">

    <!-- the "row_info" level is used by {@link BooksMultiTypeListHandler} to hide/show rows -->
    <LinearLayout
        android:id="@id/BLB_ROW_DETAILS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/c_start"
            android:layout_width="@dimen/padding_border_double"
            android:layout_height="@dimen/padding_border_double"
            android:layout_gravity="center_vertical"
            android:backgroundTint="?android:attr/colorForeground"
            android:background="@drawable/ic_lens"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            tools:text="Series name f.e."
            android:textIsSelectable="false" />

        <ImageView
            android:id="@+id/c_end"
            android:layout_width="@dimen/padding_border_double"
            android:layout_height="@dimen/padding_border_double"
            android:layout_gravity="center_vertical"
            android:backgroundTint="?android:attr/colorForeground"
            android:background="@drawable/ic_lens"
            tools:ignore="ContentDescription" />

        <View
            style="@style/divider_horizontalList" />
    </LinearLayout>

</RelativeLayout>