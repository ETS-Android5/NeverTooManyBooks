<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/SLA_ROW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/preferred"
            style="@style/tlv_checkable_button" />

        <RelativeLayout
            android:id="@id/SLA_ROW_DETAILS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/preferred"
            android:layout_toStartOf="@id/grabber"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="marquee"
                android:gravity="start"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="style name"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:ellipsize="marquee"
                android:gravity="start"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="groups"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groups"
                android:ellipsize="marquee"
                android:gravity="start"
                android:paddingEnd="10sp"
                android:paddingStart="10sp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="kind"
                android:textIsSelectable="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/grabber"
            style="@style/tlv_dragHandle"
            app:srcCompat="@drawable/ic_drag_handle"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <View style="@style/divider_horizontalList" />
</LinearLayout>