<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/TLV_ROW"
    style="@style/row_in_ListView">

    <CheckedTextView
        android:id="@id/TLV_ROW_CHECKABLE"
        style="@style/tlv_checkable_button"
        app:layout_constraintEnd_toStartOf="@id/TLV_ROW_DETAILS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true" />

    <LinearLayout
        android:id="@id/TLV_ROW_DETAILS"
        style="@style/tlv_details_row"
        android:longClickable="true"
        app:layout_constraintEnd_toStartOf="@id/TLV_ROW_GRABBER"
        app:layout_constraintStart_toEndOf="@id/TLV_ROW_CHECKABLE"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            style="@style/tlv_details_row_major"
            tools:text="style name"
            tools:ignore="SelectableText" />

        <TextView
            android:id="@+id/groups"
            style="@style/tlv_details_row_minor"
            tools:ignore="SelectableText"
            tools:text="groups" />

        <TextView
            android:id="@+id/kind"
            style="@style/tlv_details_row_minor"
            tools:ignore="SelectableText"
            tools:text="kind" />

    </LinearLayout>

    <ImageView
        android:id="@id/TLV_ROW_GRABBER"
        style="@style/tlv_dragHandle"
        app:layout_constraintStart_toEndOf="@id/TLV_ROW_DETAILS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_drag_handle"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>



