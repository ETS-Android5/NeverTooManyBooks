<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border"
            android:orientation="vertical"
            >

            <TextView
                style="@style/txt_blurb_medium"
                android:text="@string/gr_auth_blurb_part1"
                />

            <TextView
                android:id="@+id/goodreads_url"
                style="@style/link_url"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/border_double"
                tools:ignore="SelectableText"
                tools:text="Goodreads url here"
                />

            <TextView
                style="@style/txt_blurb_medium"
                android:text="@string/gr_auth_blurb_part2"
                />

            <Button
                android:id="@+id/authorize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/border_double"
                android:text="@string/gr_title_auth_access"
                />

            <TextView
                style="@style/txt_blurb_medium"
                android:text="@string/gr_auth_blurb_part3"
                />

            <TextView
                android:id="@+id/forget_blurb"
                style="@style/txt_blurb_medium"
                android:text="@string/gr_auth_blurb_part4"
                />

            <Button
                android:id="@+id/btn_forget_credentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/border_double"
                android:text="@string/gr_btn_forget_credentials"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
