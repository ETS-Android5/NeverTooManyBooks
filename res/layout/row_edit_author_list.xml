<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/TLV_ROW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/border">

    <ImageButton
        android:id="@id/TLV_ROW_DELETE"
        style="@style/tlv_delete_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TLV_ROW_DETAILS"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@id/TLV_ROW_DETAILS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/TLV_ROW_GRABBER"
        app:layout_constraintStart_toEndOf="@id/TLV_ROW_DELETE"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/row_author"
            style="@style/tlv_details_first_row"
            tools:ignore="SelectableText"
            tools:text="row_author" />

        <TextView
            android:id="@+id/row_author_sort"
            style="@style/tlv_details_row"
            tools:ignore="SelectableText"
            tools:text="row_author_sort" />
    </LinearLayout>

    <ImageView
        android:id="@id/TLV_ROW_GRABBER"
        style="@style/tlv_dragHandle"
        app:layout_constraintStart_toEndOf="@id/TLV_ROW_DETAILS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_drag_handle"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
