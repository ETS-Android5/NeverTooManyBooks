<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialogFrame">

    <TextView
        android:id="@+id/export_advanced_blurb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_border"
        android:text="@string/export_advanced_blurb"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/row_all_books"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/books_check"
            style="@style/row_option_radio_button"
            android:text="@string/book_details"
            android:checked="true" />

        <TextView
            android:id="@+id/book_details_blurb"
            style="@style/row_option_blurb"
            android:text="@string/info_book_details" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_covers"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/covers_check"
            style="@style/row_option_radio_button"
            android:text="@string/lbl_cover_images"
            android:checked="true" />

        <TextView
            android:id="@+id/cover_images_blurb"
            style="@style/row_option_blurb"
            android:text="@string/info_cover_images" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_preferences"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/preferences_check"
            style="@style/row_option_radio_button"
            android:text="@string/lbl_preferences"
            android:checked="true" />

        <TextView
            android:id="@+id/preferences_blurb"
            style="@style/row_option_blurb"
            android:text="@string/info_preferences" />
    </LinearLayout>

    <TextView
        android:id="@+id/export_advanced_date_blurb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_border_double"
        android:paddingBottom="@dimen/padding_border"
        android:text="@string/export_advanced_date_blurb"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioAll"
            style="@style/row_option_radio_button"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:checked="true"
            android:text="@string/all_books" />

        <RadioButton
            android:id="@+id/radioSinceLast"
            style="@style/row_option_radio_button"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/info_all_books_added_or_updated_since_last_full_backup" />

        <!-- Disabled to reduce complexity of UI and app; may enable one day. Deemed to be too rarely of use. -->
        <RadioButton
            android:id="@+id/radioSinceDate"
            style="@style/row_option_radio_button"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/all_books_added_or_updated_since"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RadioGroup>

    <!-- Disabled to reduce complexity of UI and app; may enable one day. Deemed to be too rarely of use. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <EditText
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/date_button"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/date_button"
            android:ems="10"
            android:inputType="date"
            tools:ignore="LabelFor,Autofill" />

        <Button
            android:id="@+id/date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="&#8230;"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <include
        android:id="@+id/buttonbar_cancel_ok"
        layout="@layout/inc_buttonbar_cancel_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
