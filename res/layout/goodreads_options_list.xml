<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_sync_with_goodreads"
            style="@style/prefsItem"
            android:drawableStart="@drawable/ic_refresh"
            android:text="@string/gr_sync_with_goodreads" />

        <TextView
            android:id="@+id/lbl_import_all_from_goodreads"
            style="@style/prefsItem"
            android:drawableStart="@drawable/ic_file_upload"
            android:text="@string/gr_import_all_from_goodreads" />

        <TextView
            android:id="@+id/lbl_send_books_to_goodreads"
            style="@style/prefsItem"
            android:drawableStart="@drawable/ic_send"
            android:text="@string/gr_send_book" />
    </LinearLayout>

</ScrollView>