<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="DuplicateIds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_border_double">

        <ImageView
            android:id="@+id/coverImage"
            style="@style/coverImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:gravity="center_horizontal"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_image" />

        <RelativeLayout
            android:id="@+id/row_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_author"
                style="@style/editorFieldHeader"
                android:text="@string/author" />

            <Button
                android:id="@+id/author"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_author"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">

                <requestFocus />
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_title"
                style="@style/editorFieldHeader"
                android:labelFor="@id/title"
                android:text="@string/title" />

            <EditText
                android:id="@+id/title"
                style="@style/bookOrSeriesTitleTextEntry"
                android:layout_below="@id/lbl_title"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_isbn"
                style="@style/editorFieldHeader"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:labelFor="@+id/isbn"
                android:text="@string/isbn" />

            <EditText
                android:id="@+id/isbn"
                style="@style/editorFieldText"
                android:layout_alignParentStart="false"
                android:layout_toEndOf="@id/lbl_isbn"
                android:inputType="text"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/is_anthology"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/is_anthology" />

        <RelativeLayout
            android:id="@+id/row_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_series"
                style="@style/editorFieldHeader"
                android:text="@string/series" />

            <Button
                android:id="@+id/series"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_series"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_publisher"
                style="@style/editorFieldHeader"
                android:labelFor="@id/publisher"
                android:text="@string/publisher" />

            <AutoCompleteTextView
                android:id="@+id/publisher"
                style="@style/personalNameTextEntry"
                android:layout_below="@id/lbl_publisher"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_publisher"
                android:completionThreshold="2" />

            <ImageButton
                android:id="@+id/btn_publisher"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/publisher"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_date_published"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_date_published"
                style="@style/editorFieldHeader"
                android:text="@string/date_published" />

            <Button
                android:id="@+id/date_published"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_date_published"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_first_publication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_first_publication"
                style="@style/editorFieldHeader"
                android:text="@string/first_publication" />

            <Button
                android:id="@+id/first_publication"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_first_publication"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_bookshelves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_bookshelves"
                style="@style/editorFieldHeader"
                android:text="@string/bookshelves" />

            <Button
                android:id="@+id/bookshelves"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_bookshelves"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_pages"
                style="@style/editorFieldHeader"
                android:labelFor="@id/pages"
                android:text="@string/pages" />

            <EditText
                android:id="@+id/pages"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_pages"
                android:layout_centerVertical="true"
                android:inputType="number"
                tools:text="999"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_price_listed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_price_listed"
                style="@style/editorFieldHeader"
                android:labelFor="@id/price_listed"
                android:text="@string/price_listed" />

            <EditText
                android:id="@+id/price_listed"
                style="@style/editorFieldText"
                android:layout_width="wrap_content"
                android:layout_below="@id/lbl_price_listed"
                android:layout_toStartOf="@id/price_listed_currency"
                android:layout_centerVertical="true"
                android:inputType="numberDecimal"
                tools:ignore="Autofill"
                tools:text="14.99" />

            <AutoCompleteTextView
                android:id="@+id/price_listed_currency"
                style="@style/editorFieldText"
                android:layout_width="wrap_content"
                android:layout_below="@id/lbl_price_listed"
                android:layout_alignParentStart="false"
                android:layout_toStartOf="@id/btn_price_listed_currency"
                android:layout_centerVertical="true"
                android:textAlignment="viewEnd"
                android:hint="..."
                android:inputType="text|textCapCharacters"
                android:minEms="3"
                android:paddingStart="@dimen/padding_border_double"
                android:paddingEnd="@dimen/padding_border_double"
                android:completionThreshold="1"
                android:singleLine="true"
                tools:ignore="Autofill,HardcodedText"
                tools:text="" />

            <ImageButton
                android:id="@+id/btn_price_listed_currency"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/price_listed"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_format"
                style="@style/editorFieldHeader"
                android:labelFor="@id/format"
                android:text="@string/format" />

            <AutoCompleteTextView
                android:id="@+id/format"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_format"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_format"
                android:completionThreshold="2"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/btn_format"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/format"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_genre"
                style="@style/editorFieldHeader"
                android:labelFor="@id/genre"
                android:text="@string/genre" />

            <AutoCompleteTextView
                android:id="@+id/genre"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_genre"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_genre"
                android:completionThreshold="2"
                android:inputType="textCapWords" />

            <ImageButton
                android:id="@+id/btn_genre"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/genre"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_language"
                style="@style/editorFieldHeader"
                android:labelFor="@id/language"
                android:text="@string/lbl_language" />

            <AutoCompleteTextView
                android:id="@+id/language"
                style="@style/languageTextEntry"
                android:layout_below="@id/lbl_language"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_language"
                android:completionThreshold="2"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/btn_language"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/language"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!-- the id for the layout is only for use by a debug method -->
        <RelativeLayout
            android:id="@+id/row_lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/btn_description"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/lbl_description"
                app:srcCompat="@drawable/ic_mode_edit"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <View
            android:id="@+id/description_divider"
            style="@style/listDividerHorizontal" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:hint="@string/not_set"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true" />
    </LinearLayout>

</ScrollView>