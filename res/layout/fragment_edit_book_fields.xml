<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    tools:ignore="DuplicateIds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_border_double">

        <ImageView
            android:id="@+id/coverImage"
            style="@style/coverImage"
            android:focusable="true"
            tools:src="@drawable/ic_image"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/row_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_author"
                style="@style/lbl_editField"
                android:text="@string/lbl_author" />

            <Button
                android:id="@+id/author"
                style="@style/buttonDataEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_author"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">

                <requestFocus />
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_title"
                style="@style/lbl_editField"
                android:labelFor="@id/title"
                android:text="@string/lbl_title" />

            <EditText
                android:id="@+id/title"
                style="@style/titleTextEntry"
                android:layout_below="@id/lbl_title"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_isbn"
                style="@style/lbl_editField"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:labelFor="@+id/isbn"
                android:text="@string/lbl_isbn" />

            <!-- not using style isbnEntryField -->
            <EditText
                android:id="@+id/isbn"
                style="@style/simpleTextEntry"
                android:layout_alignParentStart="false"
                android:layout_toEndOf="@id/lbl_isbn"
                android:inputType="textCapCharacters|textNoSuggestions"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/is_anthology"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/lbl_is_anthology" />

        <RelativeLayout
            android:id="@+id/row_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_series"
                style="@style/lbl_editField"
                android:text="@string/lbl_series" />

            <Button
                android:id="@+id/name"
                style="@style/buttonDataEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_series"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_publishing"
                style="@style/lbl_editField"
                android:labelFor="@id/publisher"
                android:text="@string/lbl_publisher" />

            <AutoCompleteTextView
                android:id="@+id/publisher"
                style="@style/personalNameTextEntry"
                android:layout_below="@id/lbl_publishing"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_publisher"
                android:completionThreshold="2" />

            <ImageButton
                android:id="@+id/btn_publisher"
                style="@style/itemEditButton"
                android:layout_alignBottom="@id/publisher"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_date_published"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_date_published"
                style="@style/lbl_editField"
                android:text="@string/lbl_date_published" />

            <Button
                android:id="@+id/date_published"
                style="@style/buttonDataEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_date_published"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_first_publication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_first_publication"
                style="@style/lbl_editField"
                android:text="@string/lbl_first_publication" />

            <Button
                android:id="@+id/first_publication"
                style="@style/buttonDataEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_first_publication"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_bookshelves"
                style="@style/lbl_editField"
                android:text="@string/lbl_bookshelves_long" />

            <Button
                android:id="@+id/bookshelves"
                style="@style/buttonDataEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_bookshelves"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_pages"
                style="@style/lbl_editField"
                android:labelFor="@id/pages"
                android:text="@string/lbl_pages" />

            <!-- input type text, so details like 'intro pages', 'appendix pages' etc can be used -->
            <EditText
                android:id="@+id/pages"
                style="@style/simpleTextEntry"
                android:layout_below="@id/lbl_pages"
                android:layout_centerVertical="true"
                android:inputType="text"
                tools:text="999"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_price_listed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_price_listed"
                style="@style/lbl_editField"
                android:labelFor="@id/price_listed"
                android:text="@string/lbl_price_listed" />

            <EditText
                android:id="@+id/price_listed"
                style="@style/priceTextEntry"
                android:layout_width="wrap_content"
                android:layout_below="@id/lbl_price_listed"
                android:layout_toStartOf="@id/price_listed_currency"
                tools:ignore="Autofill"
                tools:text="14.99" />

            <AutoCompleteTextView
                android:id="@+id/price_listed_currency"
                style="@style/currencyTextEntry"
                android:layout_below="@id/lbl_price_listed"
                android:layout_toStartOf="@id/btn_price_listed_currency"
                android:hint="..."
                tools:ignore="Autofill,HardcodedText" />

            <ImageButton
                android:id="@+id/btn_price_listed_currency"
                style="@style/itemEditButton"
                android:layout_alignBottom="@id/price_listed"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_format"
                style="@style/lbl_editField"
                android:labelFor="@id/format"
                android:text="@string/lbl_format" />

            <AutoCompleteTextView
                android:id="@+id/format"
                style="@style/bookFormatTextEntry"
                android:layout_below="@id/lbl_format"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_format"
                android:completionThreshold="2"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/btn_format"
                style="@style/itemEditButton"
                android:layout_alignBottom="@id/format"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_genre"
                style="@style/lbl_editField"
                android:labelFor="@id/genre"
                android:text="@string/lbl_genre" />

            <AutoCompleteTextView
                android:id="@+id/genre"
                style="@style/simpleTextEntry"
                android:layout_below="@id/lbl_genre"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_genre"
                android:completionThreshold="2"
                android:inputType="textCapWords" />

            <ImageButton
                android:id="@+id/btn_genre"
                style="@style/itemEditButton"
                android:layout_alignBottom="@id/genre"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_language"
                style="@style/lbl_editField"
                android:labelFor="@id/language"
                android:text="@string/lbl_language" />

            <AutoCompleteTextView
                android:id="@+id/language"
                style="@style/languageTextEntry"
                android:layout_below="@id/lbl_language"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_language"
                android:completionThreshold="2"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/btn_language"
                style="@style/itemEditButton"
                android:layout_alignBottom="@id/language"
                app:srcCompat="@drawable/ic_arrow_drop_down"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!-- the id for the layout is only for use by a debug method -->
        <RelativeLayout
            android:id="@+id/row_lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/lbl_description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/btn_description"
                style="@style/itemEditButton"
                android:layout_alignBottom="@id/lbl_description"
                app:srcCompat="@drawable/ic_edit"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <View
            android:id="@+id/description_divider"
            style="@style/divider_horizontalList" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:hint="@string/field_not_set"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true" />
    </LinearLayout>

</ScrollView>