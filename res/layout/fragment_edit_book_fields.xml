<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="DuplicateIds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_border_double">
        <ImageView
            android:id="@+id/image"
            style="@style/coverImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:gravity="center_horizontal"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_author"
                style="@style/editorFieldHeader"
                android:text="@string/author" />

            <Button
                android:id="@+id/author"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_author">

                <requestFocus />
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_title"
                style="@style/editorFieldHeader"
                android:labelFor="@id/title"
                android:text="@string/title" />

            <EditText
                android:id="@+id/title"
                style="@style/bookOrSeriesTitleTextEntry"
                android:layout_below="@id/lbl_title"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_isbn"
                style="@style/editorFieldHeader"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:labelFor="@+id/isbn"
                android:text="@string/isbn" />

            <EditText
                android:id="@+id/isbn"
                style="@style/editorFieldText"
                android:layout_alignParentStart="false"
                android:layout_toEndOf="@id/lbl_isbn"
                android:inputType="text"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/anthology"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/is_anthology" />

        <RelativeLayout
            android:id="@+id/row_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_series"
                style="@style/editorFieldHeader"
                android:text="@string/series" />

            <Button
                android:id="@+id/series"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_series" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_publisher"
                style="@style/editorFieldHeader"
                android:labelFor="@id/publisher"
                android:text="@string/publisher" />

            <AutoCompleteTextView
                android:id="@+id/publisher"
                style="@style/personalNameTextEntry"
                android:layout_below="@id/lbl_publisher"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/publisher_button"
                android:completionThreshold="2" />

            <ImageView
                android:id="@+id/publisher_button"
                style="@style/dropDownMenuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/publisher"
                app:srcCompat="@drawable/ic_expand_more"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_date_published"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_date_published"
                style="@style/editorFieldHeader"
                android:text="@string/date_published" />

            <Button
                android:id="@+id/date_published"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_date_published" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_first_publication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_first_publication"
                style="@style/editorFieldHeader"
                android:labelFor="@id/first_publication"
                android:text="@string/first_publication" />

            <Button
                android:id="@+id/first_publication"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_first_publication" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_bookshelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_bookshelves"
                style="@style/editorFieldHeader"
                android:text="@string/bookshelves" />

            <Button
                android:id="@+id/bookshelf"
                style="@style/dataEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/lbl_bookshelves" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_pages"
                style="@style/editorFieldHeader"
                android:labelFor="@id/pages"
                android:text="@string/pages" />

            <EditText
                android:id="@+id/pages"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_pages"
                android:layout_centerVertical="true"
                android:inputType="number"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_list_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_list_price"
                style="@style/editorFieldHeader"
                android:labelFor="@id/list_price"
                android:text="@string/list_price" />

            <EditText
                android:id="@+id/list_price"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_list_price"
                android:layout_centerVertical="true"
                android:inputType="numberDecimal"
                tools:ignore="Autofill" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_format"
                style="@style/editorFieldHeader"
                android:labelFor="@id/format"
                android:text="@string/format" />

            <AutoCompleteTextView
                android:id="@+id/format"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_format"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/format_button"
                android:completionThreshold="2"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/format_button"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/format"
                app:srcCompat="@drawable/ic_expand_more"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_genre"
                style="@style/editorFieldHeader"
                android:labelFor="@id/genre"
                android:text="@string/genre" />

            <AutoCompleteTextView
                android:id="@+id/genre"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_genre"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/genre_button"
                android:completionThreshold="2"
                android:inputType="textCapWords" />

            <ImageView
                android:id="@+id/genre_button"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/genre"
                app:srcCompat="@drawable/ic_expand_more"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_language"
                style="@style/editorFieldHeader"
                android:labelFor="@id/language"
                android:text="@string/language" />

            <!-- FIXME: style should be "@style/languageTextEntry" but that made the new button not work ?-->
            <AutoCompleteTextView
                android:id="@+id/language"
                style="@style/editorFieldText"
                android:layout_below="@id/lbl_language"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/language_button"
                android:completionThreshold="2"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/language_button"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/language"
                app:srcCompat="@drawable/ic_expand_more"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!-- the id for the layout is only for use by a debug method -->
        <RelativeLayout
            android:id="@+id/lbl_row_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/description_edit_button"
                style="@style/dropDownMenuButton"
                android:layout_alignBottom="@id/lbl_description"
                app:srcCompat="@drawable/ic_mode_edit"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <View style="@style/listDividerHorizontal" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:hint="@string/not_set"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true" />
    </LinearLayout>

</ScrollView>