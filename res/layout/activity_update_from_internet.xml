<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar" />

    <LinearLayout
        android:id="@+id/row_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_border"
        android:layout_below="@id/toolbar"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/title"
            style="@style/txt_row_bookMajorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Anna Karenina" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_border"
            android:paddingBottom="8dp"
            android:textIsSelectable="true"
            tools:text="by Lev Tolstoy" />

    </LinearLayout>
    <TextView
        android:id="@+id/select_fields_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_book"
        android:paddingTop="@dimen/padding_border"
        android:text="@string/select_fields_to_update_help" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonbar_cancel_update"
        android:layout_below="@id/select_fields_help_text"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/manage_fields_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_border"
            android:paddingEnd="@dimen/padding_border">
            <!-- fields are added here dynamically -->
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/buttonbar_cancel_update"
        layout="@layout/inc_buttonbar_cancel_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>