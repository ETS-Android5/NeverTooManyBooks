<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialog_frame"
    >

    <TextView
        android:id="@+id/lbl_family_name"
        style="@style/lbl_textField"
        android:labelFor="@id/family_name"
        android:text="@string/lbl_family_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <AutoCompleteTextView
        android:id="@+id/family_name"
        style="@style/personalNameTextEntry"
        android:completionThreshold="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_family_name"
        tools:ignore="Autofill"
        />

    <TextView
        android:id="@+id/lbl_given_names"
        style="@style/lbl_textField"
        android:labelFor="@id/given_names"
        android:text="@string/lbl_given_names"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/family_name"
        />

    <AutoCompleteTextView
        android:id="@+id/given_names"
        style="@style/personalNameTextEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_given_names"
        tools:ignore="Autofill"
        />

    <CheckBox
        android:id="@+id/is_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_is_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/given_names"
        />

    <TextView
        android:id="@+id/blurb"
        style="@style/txt_blurb_medium"
        android:layout_marginStart="@dimen/indent1"
        android:text="@string/warning_immediate_global_changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/is_complete"
        />
</androidx.constraintlayout.widget.ConstraintLayout>