<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/TLV_ROW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/border">

    <CheckedTextView
        android:id="@id/TLV_ROW_CHECKABLE"
        style="@style/tlv_checkable_button"
        app:layout_constraintEnd_toStartOf="@id/TLV_ROW_DETAILS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true" />

    <LinearLayout
        android:id="@id/TLV_ROW_DETAILS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/TLV_ROW_GRABBER"
        app:layout_constraintStart_toEndOf="@id/TLV_ROW_CHECKABLE"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            style="@style/tlv_details_first_row"
            tools:text="style name"
            tools:ignore="SelectableText" />

        <TextView
            android:id="@+id/info"
            style="@style/tlv_details_row"
            tools:ignore="SelectableText"
            tools:text="info" />

    </LinearLayout>

    <ImageView
        android:id="@id/TLV_ROW_GRABBER"
        style="@style/tlv_dragHandle"
        app:layout_constraintStart_toEndOf="@id/TLV_ROW_DETAILS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_drag_handle"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
