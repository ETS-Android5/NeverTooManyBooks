<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base style for all *LOCALISED* EditFields -->
    <style name="base_localeTextEntry" parent="@style/base_editorField" />

    <style name="simpleTextEntry" parent="@style/base_localeTextEntry" />

    <!-- Fields for 'human' names. e.g. Author, Publisher, ... -->
    <style name="personalNameTextEntry" parent="@style/base_localeTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntry" parent="@style/base_localeTextEntry">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <!-- The language field. -->
    <style name="languageTextEntry" parent="@style/base_localeTextEntry">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- The price (listed, paid, ... ) fields. -->
    <style name="priceTextEntry" parent="@style/base_localeTextEntry">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!-- The book format field. -->
    <style name="bookFormatTextEntry" parent="@style/base_localeTextEntry">
        <item name="android:inputType">textCapSentences</item>
    </style>
</resources>

