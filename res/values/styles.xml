<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- *************************************************************************************** -->
    <!-- Page section headers and dividers -->
    <!-- *************************************************************************************** -->

    <!-- base style for a header of grouped fields; not to be used directly in layouts -->
    <style name="base_groupHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:paddingTop">@dimen/padding_border_double</item>
        <item name="android:paddingBottom">@dimen/padding_border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- section header for grouped preferences settings -->
    <style name="hdr_preferencesSection" parent="base_groupHeader" />

    <!-- maybe split this up into a base and a concrete style... -->
    <style name="majorSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:drawableBottom">?attr/dividerHorizontal</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- basic horizontal divider line -->
    <style name="divider_horizontalList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/dividerHorizontal</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>


    <!-- *************************************************************************************** -->
    <!-- Field labels -->
    <!-- *************************************************************************************** -->

    <!-- generic field labels -->
    <style name="lbl_textField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- field labels for editable fields; almost identical to lbl_textField for now, but allows future customization -->
    <style name="lbl_editField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- TextView fields -->
    <!-- *************************************************************************************** -->

    <!-- 'major' detail text field; for example the book title -->
    <style name="txt_row_bookMajorDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- 'small' detail text field; for example series title, ... -->
    <style name="txt_row_bookDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_book_details_text</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- 'minor' detail text field; for example format, isbn,... -->
    <style name="txt_row_bookMinorDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- filename in selection list-->
    <style name="txt_row_fileName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--  selectable makes clicking not work well -->
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- file info for "txt_fileName" -->
    <style name="txt_row_fileInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <!--  selectable makes clicking not work well -->
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- EditText fields -->
    <!-- *************************************************************************************** -->

    <!-- *not to be localised* base style for all EditFields; not to be used directly in layouts -->
    <style name="base_editorField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:hint">@string/field_not_set</item>
    </style>

    <style name="isbnEntryField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_border_double</item>
        <item name="android:layout_marginEnd">@dimen/padding_border_double</item>
        <item name="android:layout_weight">1</item>
        <item name="android:digits">1234567890xX</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
        <item name="android:padding">@dimen/padding_border_double</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="seriesNumberEntry" parent="@style/base_editorField">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- International three character currency code (uppercase) -->
    <style name="currencyTextEntry" parent="base_editorField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:inputType">text|textCapCharacters</item>
        <item name="android:ems">3</item>
        <item name="android:maxLength">3</item>
        <item name="android:paddingStart">@dimen/padding_border_double</item>
        <item name="android:paddingEnd">@dimen/padding_border_double</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- *not to be localised* button with 'data' displayed on it, a click leads to a screen/dialog to edit that data -->
    <style name="buttonDataEntry" parent="@style/base_editorField" />

    <!-- not in use yet -->
    <style name="searchTextEntry" parent="@style/base_editorField" />


    <!-- *************************************************************************************** -->
    <!-- translators: create a language specific styles.xml file and copy these styles -->
    <!-- *************************************************************************************** -->

    <!-- base style for all *LOCALISED* EditFields; not to be used directly in layouts -->
    <style name="base_localeTextEntry" parent="@style/base_editorField">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="simpleTextEntry" parent="@style/base_localeTextEntry" />

    <!-- inherits from localised style! -->
    <style name="multiLineTextEntry" parent="simpleTextEntry">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <!-- Fields for 'human' names. e.g. Author, Publisher, ... -->
    <style name="personalNameTextEntry" parent="@style/base_localeTextEntry" />

    <!-- Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntry" parent="@style/base_localeTextEntry" />

    <!-- The language field. -->
    <style name="languageTextEntry" parent="@style/base_localeTextEntry" />

    <!-- The price (listed, paid, ... ) fields. -->
    <style name="priceTextEntry" parent="@style/base_localeTextEntry">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!-- The book format field. -->
    <style name="bookFormatTextEntry" parent="@style/base_localeTextEntry" />

    <!-- *************************************************************************************** -->
    <!-- Single use / specialised styles -->
    <!-- *************************************************************************************** -->
    <style name="link_url">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border_triple</item>
        <item name="android:paddingEnd">@dimen/padding_border_triple</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimaryNoDisable</item>
    </style>

    <style name="link_donate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimaryNoDisable</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="error_message">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- the outer frame (e.g. 'root') for a Dialog -->
    <style name="dialogFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_border_double</item>
    </style>

    <!-- Style for keys on the isbn search keyboard -->
    <style name="isbnSearchKey">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- CheckedTextView for 'read' status of a book -->
    <style name="ctv_read">
        <item name="android:layout_weight">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checkMark">@drawable/ic_checked_selector</item>
        <item name="android:padding">0dp</item>
    </style>
    <!-- CheckedTextView for 'lock' (aka 'complete') status of a series,author etc... -->
    <style name="ctv_lock">
        <item name="android:layout_weight">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checkMark">@drawable/ic_lock_selector</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- TouchListView icons -->
    <!-- *************************************************************************************** -->

    <style name="tlv_checkable_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:checkMark">?android:attr/textCheckMark</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:paddingStart">@dimen/padding_border_double</item>
        <item name="android:paddingEnd">@dimen/padding_border_double</item>
    </style>

    <style name="tlv_delete_button">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">start</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
    </style>

    <style name="tlv_dragHandle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- the actual list view -->
    <style name="tlv_TouchListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Cover image  -->
    <!-- *************************************************************************************** -->

    <style name="coverImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/padding_border</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:contentDescription">@string/lbl_cover</item>
    </style>

    <!-- the style for the -->
    <style name="zoomedCoverImage">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- remove these and the image will be fullscreen, but not all images look good blown up -->
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- 'edit' buttons; for example drop down menu button, edit icon button, ...  -->
    <!-- *************************************************************************************** -->
    <style name="itemEditButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- row, button and blurb for 'options' in a an option list (e.g. on a dialog) -->
    <!-- *************************************************************************************** -->

    <!-- Field or Menu label for options in a list -->
    <style name="row_option_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_border_quad</item>
        <item name="android:paddingTop">@dimen/padding_border</item>
        <item name="android:paddingBottom">@dimen/padding_border</item>
        <item name="android:drawablePadding">@dimen/padding_border_quad</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Option in the list shown as a Checkable (RadioButton, Checkbox ...) -->
    <style name="row_option_checkable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_border</item>
        <item name="android:paddingBottom">@dimen/padding_border</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Used for a dedicated 'help' TextView associated with an option -->
    <style name="row_option_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border_quad</item>
        <item name="android:paddingEnd">@dimen/padding_border_quad</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Booklist main row fields; level 1,2,3 are kept in their layout files -->
    <!-- *************************************************************************************** -->

    <style name="row_booklist_fields_book_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="row_booklist_fields_extras">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Navigation Panel specifics -->
    <!-- *************************************************************************************** -->

    <style name="nav_panel_header">
        <item name="android:padding">@dimen/padding_border_triple</item>
        <item name="android:background">?attr/color_background_nav_header</item>
    </style>

    <style name="nav_panel_main">
        <item name="android:background">?attr/color_background_nav_panel</item>
    </style>


    <!-- *************************************************************************************** -->
    <!-- -->
    <!-- *************************************************************************************** -->


</resources>