<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- *************************************************************************************** -->
    <!-- Page section headers -->
    <!-- *************************************************************************************** -->

    <style name="majorSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/border2</item>
        <item name="android:layout_marginBottom">@dimen/border1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="sectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/border2</item>
        <item name="android:layout_marginBottom">@dimen/border1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- section header for grouped menu settings -->
    <style name="menuSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/border1</item>
        <item name="android:layout_marginBottom">@dimen/border1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Page dividers -->
    <!-- *************************************************************************************** -->

    <!-- basic horizontal divider line -->
    <style name="div_horizontal">
        <item name="android:layout_width">0dp</item>
        <!-- reminder: don't set layout_height to wrap_content, will CF the layout -->
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Field labels -->
    <!-- *************************************************************************************** -->

    <!-- generic field labels where the data is below the label -->
    <style name="lbl_textField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- generic field labels where the data is on the side of the label -->
    <style name="lbl_textField_inline" parent="@style/lbl_textField">
        <item name="android:paddingEnd">@dimen/indent1</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Generic TextView with user-data in 3 sizes -->
    <!-- *************************************************************************************** -->

    <style name="base_txt_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- 'major' detail text field; for example the book title -->
    <style name="txt_detail_large" parent="base_txt_detail">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- 'medium' detail text field; for example series title, ... -->
    <style name="txt_detail_medium" parent="base_txt_detail">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- 'minor' detail text field; for example format, isbn,... -->
    <style name="txt_detail_small" parent="base_txt_detail">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Information (blurb) TextView fields -->
    <!-- *************************************************************************************** -->

    <style name="base_txt_blurb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/indent3</item>
    </style>

    <!-- informational piece of text -->
    <style name="txt_blurb_medium" parent="base_txt_blurb">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- informational piece of text -->
    <style name="txt_blurb_small" parent="base_txt_blurb">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- EditText fields - not to be localized! -->
    <!-- *************************************************************************************** -->

    <!-- base style for all EditFields; not to be used directly in layouts -->
    <style name="base_editorField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:hint">@string/field_not_set</item>
    </style>

    <style name="seriesNumberEntry" parent="@style/base_editorField">
        <item name="android:hint">@string/lbl_series_num</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- International three character currency code (uppercase) -->
    <style name="currencyTextEntry" parent="@style/base_editorField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent2</item>
        <item name="android:layout_marginEnd">@dimen/indent2</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:inputType">text|textCapCharacters</item>
        <item name="android:hint">...</item>
        <item name="android:ems">3</item>
        <item name="android:maxLength">3</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- An editable CheckBox. We basically want this to be the same height as EditText fields. -->
    <style name="editCheckbox" parent="@style/base_editorField">
        <item name="android:layout_height">@dimen/edit_text_height</item>
    </style>

    <!-- *not to be localised* button with 'data' displayed on it,
            a click leads to a screen/dialog to edit that data -->
    <style name="buttonDataEntry" parent="@style/base_editorField" />

    <style name="isbnEntry">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/lbl_isbn</item>
        <item name="android:digits">1234567890xX</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- 'edit' buttons; for example drop down menu button, edit icon button, ...  -->
    <!-- *************************************************************************************** -->

    <style name="base_iconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/border2</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="dropDownMenuButton" parent="@style/base_iconButton">
        <item name="android:src">@drawable/ic_arrow_drop_down</item>
    </style>

    <style name="itemEditMenuButton" parent="@style/base_iconButton">
        <item name="android:src">@drawable/ic_edit</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Rows in a list -->
    <!-- *************************************************************************************** -->

    <style name="base_row_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border2</item>
    </style>

    <!-- CheckBox - editable checkbox with custom icon -->
    <style name="row_checkable_button" parent="@style/base_row_button">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:button">?android:attr/textCheckMark</item>
    </style>

    <!-- ImageButton - 'delete this row' -->
    <style name="row_delete_button" parent="@style/base_row_button">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ImageView - handle to let the user drag & drop rows to re-order them -->
    <style name="row_drag_handle" parent="@style/base_row_button">
        <item name="android:src">@drawable/ic_reorder</item>
    </style>

    <!-- the details part of the row in a list row. -->
    <style name="row_details_section">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- the first/top row inside a list details row. -->
    <style name="row_details_txt_major">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <!-- the second/.. rows inside a RecyclerView details row. -->
    <style name="row_details_txt_minor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <!-- indent a bit -->
        <item name="android:layout_marginStart">@dimen/indent2</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- row, button and blurb for 'options' in a an option list (e.g. on a dialog) -->
    <!-- *************************************************************************************** -->

    <!-- Clickable row in a list. Flashes when clicked. -->
    <style name="row_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/border1</item>
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- Menu label for options in a list -->
    <style name="row_option_menu" parent="@style/row_option">
        <item name="android:padding">@dimen/border2</item>
        <item name="android:drawablePadding">@dimen/border3</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Option in the list shown as a Checkable (RadioButton, Checkbox ...) -->
    <style name="row_option_checkable" parent="@style/row_option">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Used for a dedicated 'help' TextView associated with an option -->
    <style name="row_option_blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/border1</item>
        <item name="android:paddingStart">@dimen/indent_compound_button</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <!-- *************************************************************************************** -->
    <!-- Cover image  -->
    <!-- *************************************************************************************** -->

    <!-- base style for all Cover image fields; not to be used directly in layouts -->
    <style name="base_cover_image">
        <item name="android:background">@drawable/border</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/lbl_cover</item>
    </style>

    <!-- normal size; actual size set from code. -->
    <style name="coverImage" parent="@style/base_cover_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border1</item>
    </style>

    <!-- full screen zoomed -->
    <style name="zoomedCoverImage" parent="@style/base_cover_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Single use / specialised styles -->
    <!-- *************************************************************************************** -->

    <!-- level 1/2 text in the header on the booklist activity -->
    <style name="booklist_header_level_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent2</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- Booklist book row fields; level 1,2,3 are kept in their layout files -->
    <style name="booklist_book_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent1</item>
        <item name="android:layout_marginEnd">@dimen/indent1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- file info fields for a File selection screen -->
    <style name="file_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- clickable URL -->
    <style name="link_url">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimaryNoDisable</item>
    </style>

    <!-- err. -->
    <style name="error_message">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/colorError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="nav_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- the outer frame (e.g. 'root') for a Dialog -->
    <style name="dialog_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/border2</item>
    </style>

    <!-- a progress "dialog" implemented as an overlay to a full-screen. -->
    <style name="progress_overlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border1</item>
        <item name="android:layout_margin">@dimen/border2</item>
        <item name="android:elevation">2dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">?android:attr/colorBackgroundFloating</item>
    </style>

    <style name="floatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <!-- Keys on the isbn search keyboard -->
    <style name="isbnSearchKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- 'plus' and 'minus' buttons on the PartialDatePicker dialog.-->
    <style name="partial_date_picker_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Read-only "CheckBox" with custom 'check/invisible' icon in our custom color. -->
    <style name="book_read">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:button">@drawable/ic_checked_selector</item>
        <item name="android:buttonTint">?attr/checked_icon_tint</item>
    </style>

    <!-- *************************************************************************************** -->

</resources>