<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--   "xxxx_base" are not meant to be used in layouts -->


    <!-- *******************************************************************************
        Page section headers and dividers
    -->

    <style name="header_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:paddingTop">@dimen/padding_border_double</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="prefsHeader" parent="header_base" />

    <style name="propertyGroupHeading" parent="header_base">
        <item name="android:drawableBottom">?attr/dividerHorizontal</item>
    </style>

    <!-- your basic horizontal divider line -->
    <style name="listDividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/dividerHorizontal</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="DialogDividerTheme" />

    <!-- *******************************************************************************
        Field labels and their text *display* fields
    -->

    <!-- field label in read-only book details -->
    <style name="bookDetailLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- text field in read-only book details -->
    <style name="bookDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_book_details_text</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="bookMinorDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- filename -->
    <style name="fileNameText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--  selectable makes clicking not work well -->
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- file info -->
    <style name="fileInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <!--  selectable makes clicking not work well -->
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- *******************************************************************************
        Field labels (if different from above) and their *edit* fields
    -->
    <style name="editorFieldHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="editorFieldTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:hint">@string/not_set</item>
    </style>

    <!-- BEGIN Usually customized in the language styles.ml for localised differences -->

    <!-- a simple text field -->
    <style name="editorFieldText" parent="@style/editorFieldTextBase" />

    <!-- a button with 'data' displayed on it, a click leads to a screen to edit that data -->
    <style name="dataEntryButton" parent="@style/editorFieldTextBase" />

    <!-- not directly to be used, but the base for the ones below -->
    <style name="localeBasedTextEntry" parent="@style/editorFieldText">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="languageTextEntry" parent="@style/localeBasedTextEntry" />

    <style name="personalNameTextEntry" parent="@style/localeBasedTextEntry" />

    <style name="bookOrSeriesTitleTextEntry" parent="@style/localeBasedTextEntry" />

    <style name="bookFormatTextEntry" parent="@style/localeBasedTextEntry" />

    <!-- BEGIN Usually customized in the language styles.ml for localised differences -->


    <!--
    Specific, yet general (arf)
    -->

    <!-- specific for Searches, allow multiline + avoid using the oddball name -->
    <style name="searchTextEntry" parent="@style/bookOrSeriesTitleTextEntry">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Style for key of isbn search keyboard -->
    <style name="isbnSearchKey">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!--
    **************************************************************************************
    -->

    <!-- Style for item in preferences lists -->
    <style name="prefsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_prefs_item</item>
        <item name="android:drawablePadding">@dimen/padding_prefs_item</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!--
    **************************************************************************************
    -->
    <style name="propertyValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:paddingEnd">@dimen/padding_border_double</item>
    </style>

    <!--
    **************************************************************************************
    -->

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <!--
    **************************************************************************************
    -->

    <style name="error_message">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <style name="link_url">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border_triple</item>
        <item name="android:paddingEnd">@dimen/padding_border_triple</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimaryNoDisable</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <style name="link_donate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding_border_quad</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimaryNoDisable</item>
    </style>

    <!--
        TouchListView icons
    -->
    <style name="tlv_delete_button">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
    </style>

    <style name="TouchListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tlv_dragHandle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>

    </style>
    <!--
    **************************************************************************************
    -->
    <!-- row, button and blurb for 'options' in a an option list (f.e. on a dialog) -->
    <style name="option_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="option_blurb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_border_quad</item>
        <item name="android:paddingEnd">@dimen/padding_border_quad</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="option_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
    </style>



    <style name="dialogFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_border_double</item>
    </style>

    <style name="books_on_bookshelf_header">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="books_on_bookshelf_list">
    </style>

    <style name="books_on_bookshelf_nav_view_header">
        <item name="android:padding">@dimen/padding_border_triple</item>
        <item name="android:background">?attr/color_background_nav_header</item>
    </style>

    <style name="books_on_bookshelf_nav_view">
        <item name="android:background">?attr/color_background_nav_panel</item>
    </style>

    <style name="booklist_book_row_minor_fields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="read_checkbox">
        <item name="android:layout_weight">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checkMark">?android:attr/textCheckMark</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="dropDownMenuButton">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ZoomedImage">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- remove these and the image will be fullscreen, but not all images look good blown up -->
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
    </style>

    <style name="coverImage">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_weight">0</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/padding_border</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="title">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>