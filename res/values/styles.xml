<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Each base style and its children are divided by these comment headers
    **************************************************************************************
    -->
    <!-- Style for item in preferences lists -->
    <style name="prefs_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="paddingStart">@dimen/padding_prefs_item</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <!-- Style for headers in preferences lists -->
    <style name="prefs_header">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_border</item>
        <item name="paddingStart">@dimen/padding_border</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <style name="listDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <!-- Style for key of isbn search keyboard -->
    <style name="isbn_search_key">
        <item name="android:layout_width">@dimen/isbn_key_size</item>
        <item name="android:layout_height">@dimen/isbn_key_size</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!--
    **************************************************************************************
    -->
    <!-- Style for detail titles in read-only book details -->
    <style name="bookDetailsTitlesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
**************************************************************************************
-->
    <!-- Style for text details in read-only book details -->
    <style name="bookDetailsTextStyle">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_book_details_info</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="fileDetailsTextStyle" parent="bookDetailsTextStyle">
        <!--  selectable makes clicking not work well -->
        <item name="android:textIsSelectable">false</item>
    </style>

    <!--
    **************************************************************************************
    -->
    <!-- Style for text header data (typically title/author) in read-only book details -->
    <style name="bookDetailsHeaderStyle">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!--
    **************************************************************************************
    -->
    <!-- Style for smaller text header data (typically isbn/pages) in read-only book details -->
    <style name="bookDetailsMinorDetailStyle">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="fileDetailsMinorDetailStyle" parent="bookDetailsMinorDetailStyle">
        <!--  selectable makes clicking not work well -->
        <item name="android:textIsSelectable">false</item>
    </style>

    <!--
    **************************************************************************************
    -->

    <style name="editorFieldHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!--
    **************************************************************************************
    -->
    <style name="editorFieldTextStyleBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:hint">@string/notset</item>
    </style>


    <!-- BEGIN Usually customized in the language styles.ml -->
    <style name="editorFieldTextStyle" parent="@style/editorFieldTextStyleBase" />

    <style name="dataEntryButtonStyle" parent="@style/editorFieldTextStyleBase" />

    <style name="localeBasedTextEntry" parent="@style/editorFieldTextStyle">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="languageTextEntry" parent="@style/localeBasedTextEntry" />

    <style name="personalNameTextEntry" parent="@style/localeBasedTextEntry" />

    <style name="bookOrSeriesTitleTextEntry" parent="@style/localeBasedTextEntry" />
    <!-- BEGIN Usually customized in the language styles.ml -->


    <style name="seachTextEntry" parent="@style/bookOrSeriesTitleTextEntry">
        <item name="android:inputType">textMultiLine</item>
    </style>


    <!--
    **************************************************************************************
    -->
    <style name="propertyValue">
        <!-- <item name="android:background">#40000000</item> -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingStart">@dimen/padding_border</item>
        <item name="paddingEnd">@dimen/padding_border_double</item>
        <item name="android:gravity">top</item>
    </style>


    <!--
    **************************************************************************************
    -->
    <style name="DialogTitleTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <!--
    **************************************************************************************
    -->
    <style name="DialogDividerTheme" />

    <!--
    **************************************************************************************
    -->
    <style name="bookshelf_spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!--
    **************************************************************************************
    -->

    <style name="error_message">
        <item name="android:textColor">@color/error_msg</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <style name="link_url">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_border</item>
        <item name="paddingStart">@dimen/padding_border_triple</item>
        <item name="paddingEnd">@dimen/padding_border_triple</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/link_blue</item>
    </style>
    <!--
    **************************************************************************************
    -->
    <style name="link_donate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/link_donate</item>
    </style>

    <style name="readToggleButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:drawableTop">?android:attr/textCheckMark</item>
        <item name="android:padding">0dp</item>
        <item name="android:textOn">@string/_empty_</item>
        <item name="android:textOff">@string/_empty_</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="propertyDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="touch_list_view_row_ic_delete">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
    </style>

    <style name="touch_list_view_row_ic_grabber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="anthologyTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="anthologyAuthor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">@dimen/padding_border</item>
        <item name="android:paddingStart">@dimen/padding_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <!-- row, button and blurb for 'options' in a an option list (f.e. on a dialog) -->
    <style name="option_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="option_blurb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="option_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


</resources>