<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- *************************************************************************************** -->
    <!-- Page section headers -->
    <!-- *************************************************************************************** -->

    <style name="SectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/border2</item>
        <item name="android:layout_marginBottom">@dimen/border1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SectionHeader.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="SectionHeader.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Page dividers -->
    <!-- *************************************************************************************** -->

    <!-- basic horizontal divider line -->
    <style name="SectionDivider">
        <item name="android:layout_width">0dp</item>
        <!-- reminder: don't set layout_height to wrap_content, will CF the layout -->
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Field labels -->
    <!-- *************************************************************************************** -->

    <!-- generic field labels where the data is below the label -->
    <style name="FieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- generic field labels where the data is on the side of the label -->
    <style name="FieldLabel.Inline">
        <item name="android:paddingEnd">@dimen/indent1</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Generic TextView with user-data in 3 sizes -->
    <!-- *************************************************************************************** -->

    <!-- 'medium' detail text field; for example series title, ... -->
    <style name="TextDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- 'major' detail text field; for example the book title -->
    <style name="TextDetail.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- 'minor' detail text field; for example format, isbn,... -->
    <style name="TextDetail.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Information (blurb) TextView fields -->
    <!-- *************************************************************************************** -->

    <!-- informational piece of text -->
    <style name="Blurb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent1</item>
        <item name="android:layout_marginEnd">@dimen/indent3</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- informational piece of text -->
    <style name="Blurb.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- EditText fields -->
    <!-- *************************************************************************************** -->

    <!-- base style for all EditText; not to be used directly in layouts. -->
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- base style for all AutoCompleteTextView; not to be used directly in layouts. -->
    <style name="EditText.AutoComplete">
    </style>

    <style name="EditText.SeriesNumber">
        <item name="android:hint">@string/lbl_series_num</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- International three character currency code (uppercase) -->
    <style name="EditText.Currency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent2</item>
        <item name="android:layout_marginEnd">@dimen/indent2</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:inputType">text|textCapCharacters</item>
        <item name="android:hint">...</item>
        <item name="android:ems">3</item>
        <item name="android:maxLength">3</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Isbn">
        <item name="android:hint">@string/lbl_isbn</item>
        <item name="android:digits">1234567890xX</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
    </style>

    <style name="EditText.Isbn.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_margin">@dimen/border2</item>
    </style>

    <style name="EditText.FileName">
        <item name="android:inputType">text</item>
    </style>

    <!-- An editable CheckBox. We basically want this to be the same height as EditText fields. -->
    <style name="CheckboxEntry">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Button with 'data' displayed on it; a click leads to a screen/dialog to edit that data -->
    <style name="DataEntryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/border1</item>
        <item name="android:hint">@string/field_not_set</item>
    </style>

    <style name="DropDownMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/border2</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_arrow_drop_down</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Rows in a list -->
    <!-- *************************************************************************************** -->

    <!-- Some sort of button in a row; not to be used directly in layouts -->
    <style name="RowButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border2</item>
    </style>

    <!-- CheckBox - editable checkbox with custom icon -->
    <style name="RowButton.Checkable">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:button">?android:attr/textCheckMark</item>
    </style>

    <!-- ImageButton - 'delete this row' -->
    <style name="RowButton.Delete">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ImageView - handle to let the user drag & drop rows to re-order them -->
    <style name="RowButton.DragHandle">
        <item name="android:src">@drawable/ic_reorder</item>
    </style>

    <!-- LinearLayout/ConstraintLayout - the details part of the row in a list row. -->
    <style name="RowTextSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- a row inside a list details row; not to be used directly in layouts -->
    <style name="RowTextLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- Primary row inside a list details row. -->
    <style name="RowTextLine.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <!-- Secondary rows inside a list details row. -->
    <style name="RowTextLine.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
        <!-- indent a bit -->
        <item name="android:layout_marginStart">@dimen/indent2</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- row, button and blurb for 'options' in a an option list (e.g. on a dialog) -->
    <!-- *************************************************************************************** -->

    <!-- Clickable row in a list. Flashes when clicked. -->
    <style name="OptionRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/border1</item>
    </style>

    <!-- Menu label for options in a list -->
    <style name="OptionRow.Menu">
        <item name="android:padding">@dimen/border2</item>
        <item name="android:drawablePadding">@dimen/border4</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- Option in the list shown as a Checkable (RadioButton, Checkbox ...) -->
    <style name="OptionRow.Checkable">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <!-- Used for a dedicated 'help' TextView associated with an option -->
    <style name="OptionRow.Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/indent_compound_button</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Cover image  -->
    <!-- *************************************************************************************** -->

    <!-- Cover image; actual size is always set from code. -->
    <style name="CoverImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border1</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/lbl_cover</item>
    </style>

    <!-- full screen zoomed -->
    <style name="CoverImage.Zoomed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- Single use / specialised styles -->
    <!-- *************************************************************************************** -->

    <!-- Booklist; not to be used directly in layouts -->
    <style name="BooklistBook">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/indent1</item>
        <item name="android:layout_marginEnd">@dimen/indent1</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- level 1/2 text in the header on the booklist activity -->
    <style name="BooklistBook.Header">
        <item name="android:layout_marginStart">@dimen/indent2</item>
        <item name="android:layout_marginEnd">@dimen/indent2</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="BooklistBook.Header.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="BooklistBook.Section">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="BooklistBook.Section.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="BooklistBook.Section.Small">
        <item name="android:padding">@dimen/border1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="BooklistBook.Primary">
        <!-- medium was tried but it's way to big. -->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="BooklistBook.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Read-only "CheckBox" with custom 'check/invisible' icon in our custom color.
     Using 'Theme.AppCompat' a wrap_content/wrap_content worked fine.
     Since using 'Theme.MaterialComponents' it had to be set to 24/24 (i.e. icon size) -->
    <style name="Flag">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:button">@drawable/ic_checked_selector</item>
        <item name="android:buttonTint">?attr/checked_icon_tint</item>
    </style>

    <!-- file info fields for a File selection screen -->
    <style name="FileInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- clickable URL -->
    <style name="Url">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimaryNoDisable</item>
    </style>

    <!-- err. -->
    <style name="ErrorMessage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/colorError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <!--<item name="android:background">?android:attr/colorPrimary</item>-->
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- the outer frame (e.g. 'root') for a Dialog -->
    <style name="DialogFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/border2</item>
    </style>

    <!-- a progress "dialog" implemented as an overlay to a full-screen. -->
    <style name="ProgressOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/border1</item>
        <item name="android:layout_margin">@dimen/border2</item>
        <item name="android:elevation">2dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">?android:attr/colorBackgroundFloating</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <!-- Keys on the isbn search keyboard.
     Must extend system style so Button/ImageButton (the 'del' key) look the same -->
    <style name="IsbnSearchKey" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">@dimen/border1</item>
        <item name="android:layout_marginStart">@dimen/border1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="IsbnSearchKey.Del">
        <item name="android:src">@drawable/ic_backspace</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <!-- 'plus' and 'minus' buttons on the PartialDatePicker dialog.-->
    <style name="PartialDatePickerButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/border2</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- translators: create a language specific styles.xml file and copy these styles. -->
    <!-- *************************************************************************************** -->

    <!-- Simple; Generic single-line fields -->
    <style name="simpleTextEntry" parent="@style/EditText">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Simple; Generic multi-line fields -->
    <style name="multiLineTextEntry" parent="@style/EditText">
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <!-- AutoComplete; Generic fields -->
    <style name="autoCompleteTextEntry" parent="@style/EditText.AutoComplete">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- ....................................................................................... -->

    <!-- AutoComplete; Fields for 'human' names. e.g. Author, Publisher, ... -->
    <style name="personalNameTextEntry" parent="@style/EditText.AutoComplete">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Simple; Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntry" parent="@style/EditText">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- AutoComplete; Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntryAutoComplete" parent="@style/EditText.AutoComplete">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- ....................................................................................... -->

    <!-- AutoComplete; The language field. -->
    <style name="languageTextEntry" parent="@style/EditText.AutoComplete">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- AutoComplete; The book format field. -->
    <style name="bookFormatTextEntry" parent="@style/EditText.AutoComplete">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- The price (listed, paid, ... ) fields. -->
    <style name="priceTextEntry" parent="@style/EditText">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!-- *************************************************************************************** -->

</resources>