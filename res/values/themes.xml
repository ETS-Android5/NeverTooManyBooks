<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    These are the standard attributes that make up a complete theme.
    https://developer.android.com/reference/android/R.styleable.html#Theme
    -->

    <!-- Specific Theme for full screen usage. -->
    <style name="AppTheme.FullScreen" parent="AppTheme.Dark">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- =========== -->
    <!-- Dark theme. -->
    <!-- =========== -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/grey_200</item>
        <item name="checked_icon_tint">@color/light_green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!-- =============== -->
        <!-- Global defaults -->
        <!-- =============== -->

        <!-- the default style attributes for a ListView using a native fast scroller. -->
        <item name="android:fastScrollThumbDrawable">@drawable/scrollbar_handle_accelerated_anim2</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:fastScrollOverlayPosition">floating</item>

        <!--  =========================== -->
        <!-- Theme Color palette -->
        <!--  =========================== -->

        <!-- The primary branding color for the app. By default, this is the color applied to the
            action bar background. -->
        <item name="colorPrimary">@color/blue_500</item>
        <!-- Dark variant of the primary branding color. By default, this is the color applied to
            the status bar (via statusBarColor) and navigation bar (via navigationBarColor). -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <!-- Bright complement to the primary branding color. By default, this is the color applied
             to framework controls (via colorControlActivated). -->
        <item name="colorAccent">@color/blue_a200</item>

    </style>

    <!-- =================== -->
    <!-- Light theme - Blue. -->
    <!-- =================== -->
    <style name="AppTheme.Light.Blue" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/blue_grey_600</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!-- =============== -->
        <!-- Global defaults -->
        <!-- =============== -->

        <!-- the default style attributes for a ListView using a native fast scroller. -->
        <item name="android:fastScrollThumbDrawable">@drawable/scrollbar_handle_accelerated_anim2</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:fastScrollOverlayPosition">floating</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/blue_500</item>
        <!-- Dark variant of the primary branding color. By default, this is the color applied to
            the status bar (via statusBarColor) and navigation bar (via navigationBarColor). -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <!-- Bright complement to the primary branding color. By default, this is the color applied
          to framework controls (via colorControlActivated). -->
        <item name="colorAccent">@color/blue_a200</item>

    </style>

    <!-- ================== -->
    <!-- Light theme - Red. -->
    <!-- ================== -->
    <style name="AppTheme.Light.Red" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/grey_500</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!-- =============== -->
        <!-- Global defaults -->
        <!-- =============== -->

        <!-- the default style attributes for a ListView using a native fast scroller. -->
        <item name="android:fastScrollThumbDrawable">@drawable/scrollbar_handle_accelerated_anim2</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:fastScrollOverlayPosition">floating</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/red_500</item>
        <!-- Dark variant of the primary branding color. By default, this is the color applied to
            the status bar (via statusBarColor) and navigation bar (via navigationBarColor). -->
        <item name="colorPrimaryDark">@color/red_700</item>
        <!-- Bright complement to the primary branding color. By default, this is the color applied
          to framework controls (via colorControlActivated). -->
        <item name="colorAccent">@color/red_a200</item>
    </style>

</resources>