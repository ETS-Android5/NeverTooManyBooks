<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Intention from the start was to use the Material themes.
    Due to snags postponed till better understood.
    So... April 2019: re-tested with Material and ouch..
    Issues seen:

    - tabs: the selected tab title seems to use the same colour as the background
    making it invisible.

    - buttons: have a larger background. As we had no margins up to now, they hug each other
    way to close. Often also simply to big to fit where they are.

    - check-mark for 'read' in the BoB list is much larger

    -->
    <!-- ============================================================ -->
    <!-- Exclusive use by the startup activity, hiding it completely. -->
    <!-- Parent should become: Theme.MaterialComponents.NoActionBar -->
    <!-- ============================================================ -->
    <style name="StartupActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AppTheme.Light.Blue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.Light.Blue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- =========== -->
    <!-- Dark theme. -->
    <!-- Parent should become: Theme.MaterialComponents.NoActionBar -->
    <!-- =========== -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">

        <!-- the default style attributes for a ListView using a native fast scroller. -->
        <item name="android:fastScrollThumbDrawable">@drawable/scrollbar_handle_accelerated_anim2</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:fastScrollOverlayPosition">floating</item>
        <!--<item name="android:fastScrollPreviewBackgroundRight">@drawable/menu_submenu_background</item>-->
        <!--<item name="android:fastScrollPreviewBackgroundLeft">@drawable/menu_submenu_background</item>-->
        <!--<item name="android:fastScrollTextColor">@color/primary_text_dark</item>-->

        <!-- rectangular border around an element -->
        <item name="color_border">@color/grey_800</item>

        <!-- ============ -->
        <!-- Vector icons -->
        <!-- ============ -->

        <!-- ic_file_name.xml vector icons have their 'fillColor' set to this reference -->
        <item name="fillColorVectorIcons">?android:attr/textColorSecondary</item>
        <!-- ic_check.xml vector icon uses 'fillColor' set to this reference -->
        <item name="ic_check_fillColor">?android:attr/colorControlActivated</item>
        <!-- ic_lock.xml vector icon uses 'fillColor' set to this reference -->
        <item name="ic_lock_fillColor">@color/amber_a700</item>

        <!--  =========================== -->
        <!-- AppCompatTheme Color palette -->
        <!--  =========================== -->

        <!-- The primary branding color for the app. By default, this is the color applied to the
            action bar background. -->
        <item name="colorPrimary">@color/blue_500</item>
        <!-- Dark variant of the primary branding color. By default, this is the color applied to
            the status bar (via statusBarColor) and navigation bar (via navigationBarColor). -->
        <item name="colorPrimaryDark">@color/blue_900</item>
        <!-- Bright complement to the primary branding color. By default, this is the color applied
             to framework controls (via colorControlActivated). -->
        <item name="colorAccent">@color/blue_a700</item>
        <!-- The color applied to framework controls in their normal state. -->
        <item name="colorControlNormal">@color/black</item>
        <!-- The color applied to framework controls in their activated (ex. checked) state. -->
        <item name="colorControlActivated">@color/green_a700</item>
        <!-- The color applied to framework control highlights (ex. ripples, list selectors). -->
        <item name="colorControlHighlight">@color/blue_300</item>
        <!-- The color applied to framework buttons in their normal state. -->
        <item name="colorButtonNormal">@color/blue_600</item>
        <!-- The color applied to framework switch thumbs in their normal state. -->
        <!--<item name="colorSwitchThumbNormal"></item>-->
        <!-- Default color of background imagery for floating components, ex. dialogs, popups, and cards. -->
        <!--<item name="colorBackgroundFloating"></item>-->
    </style>

