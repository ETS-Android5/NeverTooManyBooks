<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    These are the standard attributes that make up a complete theme.
    https://developer.android.com/reference/android/R.styleable.html#Theme
    -->

    <style name="SplashScreen" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <!-- Specific Theme for full screen usage. -->
    <style name="AppTheme.FullScreen" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- ================ -->
    <!-- Day/Night theme. -->
    <!-- ================ -->
    <style name="AppTheme.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/blue_grey_600</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_a200</item>

    </style>


    <!-- =========== -->
    <!-- Dark theme. -->
    <!-- =========== -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/grey_200</item>
        <item name="checked_icon_tint">@color/light_green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!--  =========================== -->
        <!-- Theme Color palette -->
        <!--  =========================== -->

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_a200</item>

    </style>

    <!-- =================== -->
    <!-- Light theme - Blue. -->
    <!-- =================== -->
    <style name="AppTheme.Light.Blue" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/blue_grey_600</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_a200</item>

    </style>

    <!-- ================== -->
    <!-- Light theme - Red. -->
    <!-- ================== -->
    <style name="AppTheme.Light.Red" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ==================== -->
        <!-- Application specific -->
        <!-- ==================== -->

        <item name="border_color">@color/grey_500</item>
        <item name="checked_icon_tint">@color/green_a700</item>
        <item name="completed_icon_tint">@color/amber_a700</item>

        <!-- ============================ -->
        <!-- Theme Color palette -->
        <!-- ============================ -->

        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a200</item>
    </style>

</resources>