<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <style name="Invisible"  parent="AppTheme">
        <item  name="android:windowBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////

    yes, red is joke... needs to change
    -->
    <!-- System wide theme customizing goes into these -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" >

        <item name="fillColorVectorIcons">?android:attr/textColorSecondary</item>

        <item name="color_background_nav_header">@color/blue_400</item>
        <item name="color_background_nav_panel">@color/black</item>
        <item name="color_background_thumbnail">@color/grey_400</item>
        <item name="color_background_toolbar">@color/blue_600</item>

        <item name="color_border">@color/grey_400</item>

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>

        <!-- AppCompat Attributes -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorAccent">@color/red_a700</item>

        <!-- AppCompat Control Attributes -->
        <item name="colorButtonNormal">@color/red_500</item>
        <item name="colorControlNormal">@color/red_500</item>
        <item name="colorControlActivated">@color/red_500</item>
        <item name="colorControlHighlight">@color/red_500</item>
    </style>

    <!-- Dark Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a700</item>
    </style>
    <style name="AppTheme.Dialog.NoActionBar" parent="AppTheme.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Dark Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a700</item>
    </style>
    <style name="AppTheme.Dialog.Alert.NoActionBar" parent="AppTheme.Dialog.Alert">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="fillColorVectorIcons">?android:attr/textColorSecondary</item>

        <item name="color_background_nav_header">@color/light_blue_400</item>
        <item name="color_background_nav_panel">@color/white</item>
        <item name="color_background_thumbnail">@color/grey_400</item>
        <item name="color_background_toolbar">@color/light_blue_600</item>

        <item name="color_border">@color/grey_400</item>

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppTheme.Dialog.Light</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Light</item>

        <!-- AppCompat Attributes -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a700</item>

        <!-- AppCompat Control Attributes -->
        <item name="colorButtonNormal">@color/red_500</item>
        <item name="colorControlNormal">@color/red_500</item>
        <item name="colorControlActivated">@color/red_500</item>
        <item name="colorControlHighlight">@color/red_500</item>
    </style>

    <!-- Light Dialog Theme -->
    <style name="AppTheme.Dialog.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a700</item>
    </style>
    <style name="AppTheme.Dialog.NoActionBar.Light" parent="AppTheme.Dialog.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Light Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a700</item>
    </style>
    <style name="AppTheme.Dialog.Alert.NoActionBar.Light" parent="AppTheme.Dialog.Alert.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>