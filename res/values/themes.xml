<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- generic name for use in manifest only -->
    <style name="ThemeDefault" parent="@style/ThemeDark" />

    <style name="ThemeInvisible"  parent="@style/Theme.AppCompat">
        <item  name="android:windowBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- System wide theme customizing goes into these -->
    <style name="ThemeDark" parent="@style/Theme.AppCompat.NoActionBar" />
    <style name="ThemeLight" parent="@style/Theme.AppCompat.Light.NoActionBar" />
    <!--
    <style name="ThemeDark" parent="@android:style/Theme.Material.NoActionBar" />
    <style name="ThemeLight" parent="@android:style/Theme.Material.Light.NoActionBar" />
    -->
</resources>