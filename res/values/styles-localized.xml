<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- *************************************************************************************** -->
    <!-- translators: create a language specific styles-localized.xml file and copy these styles -->
    <!-- *************************************************************************************** -->

    <!-- simple, generic single-line fields -->
    <style name="simpleTextEntry" parent="@style/base_editorField">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- simple, generic multi-line fields -->
    <style name="multiLineTextEntry" parent="@style/simpleTextEntry">
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <!-- Fields for 'human' names. e.g. Author, Publisher, ... -->
    <style name="personalNameTextEntry" parent="@style/base_editorField" >
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Titles of Books, Series, Bookshelf, TocEntry's (Anthology titles) , ... -->
    <style name="titleTextEntry" parent="@style/base_editorField">
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- The language field. -->
    <style name="languageTextEntry" parent="@style/base_editorField" >
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- The price (listed, paid, ... ) fields. -->
    <style name="priceTextEntry" parent="@style/base_editorField">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!-- The book format field. -->
    <style name="bookFormatTextEntry" parent="@style/base_editorField" >
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>