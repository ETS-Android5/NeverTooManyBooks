<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Default spacing for a Navigation panel header. -->
    <dimen name="nav_header_vertical_spacing">8dp</dimen>
    <dimen name="nav_header_height">176dp</dimen>

    <!-- Default spacing around a FAB. -->
    <dimen name="fab_margin">16dp</dimen>

    <!-- Application icon size on the nav panel and startup splash-->
    <dimen name="app_icon">100dp</dimen>

    <!-- The base size for cover images. Get's multiplied with the image-scale preference. -->
    <dimen name="cover_base_size">30dp</dimen>

    <!-- Spacing either for all around, or for bottom/top.
    But NOT for start/end, for the latter use 'indent' -->
    <dimen name="border1">4dp</dimen>
    <dimen name="border2">8dp</dimen>
    <dimen name="border3">12dp</dimen>
    <dimen name="border4">16dp</dimen>

    <!-- indent, usually start only, but can be used for end as well. -->
    <dimen name="indent1">4dp</dimen>
    <dimen name="indent2">8dp</dimen>
    <dimen name="indent3">12dp</dimen>
    <dimen name="indent4">16dp</dimen>

    <!-- top margin for the top-level rows; also known as "fat_finger_spacer" -->
    <dimen name="booklist_row_spacer">4dp</dimen>

    <!-- indent multiplier for the levels in the booklist:
        paddingIndent = (level-1) * booklist_level_indent -->
    <dimen name="booklist_level_indent">8dp</dimen>

    <!-- indent an element so it matches up with the text of a standard size compound button. -->
    <dimen name="indent_compound_button">32dp</dimen>


    <!-- Default and full height of a standard EditView with default text size inside.
    Used to make other elements the same height. -->
    <dimen name="edit_text_height">48dp</dimen>



    <!-- FastScrollerOverlay line 1 - equivalent size from ?android:attr/textAppearanceLarge -->
    <dimen name="fso_text_primary">22sp</dimen>
    <!-- FastScrollerOverlay line 2 - equivalent size from ?android:attr/textAppearanceMedium -->
    <dimen name="fso_text_secondary">18sp</dimen>


</resources>