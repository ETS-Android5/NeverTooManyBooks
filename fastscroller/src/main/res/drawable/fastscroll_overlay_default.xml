<!-- The base shape with 22/44 dimensions comes from
     API 29: src\main\res\drawable\fastscroll_overlay_default.xml
     but the inset is removed and handled from code.
     The tint is replaced with the colorPrimary. -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true"
    android:shape="rectangle">
    <solid android:color="?attr/colorPrimaryVariant" />

    <stroke
        android:width="4dp"
        android:color="?attr/colorPrimary" />

    <corners
        android:bottomLeftRadius="44dp"
        android:topLeftRadius="44dp"
        android:topRightRadius="44dp" />

    <padding
        android:left="22dp"
        android:right="22dp" />
</shape>

