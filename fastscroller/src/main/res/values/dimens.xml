<resources>
    <!-- fast scroller - Minimal Thumb and Track width/height.
         Original Android: R.dimen.fastscroll_default_thickness=8dp -->
    <dimen name="fs_default_thickness">8dp</dimen>
    <!-- Minimal Thumb size; i.e. big enough to grab with a finger. -->
    <dimen name="fs_minimal_thumb_size">40dp</dimen>

    <!-- fast scroller - When to show a scrollbar.
         Original Android: R.dimen.fastscroll_minimum_range=50dp-->
    <dimen name="fs_minimum_range">50dp</dimen>
    <!-- fast scroller - Margin (begin+margin; end-margin) for the scrollbar range.
         Original Android: R.dimen.fastscroll_margin=0dp -->
    <dimen name="fs_margin">0dp</dimen>

    <!-- fast scroller - PopupStyles.CLASSIC styling -->
    <dimen name="fs_classic_popup_min_width">120dp</dimen>
    <dimen name="fs_classic_popup_min_height">64dp</dimen>
    <dimen name="fs_classic_popup_margin_end">16dp</dimen>
    <dimen name="fs_classic_popup_text_size">18sp</dimen>

    <!-- fast scroller - PopupStyles.MD styling -->
    <dimen name="fs_md_popup_min_size">60dp</dimen>
    <dimen name="fs_md_popup_margin_end">16dp</dimen>
    <dimen name="fs_md_popup_text_size">18sp</dimen>

    <!-- fast scroller - PopupStyles.MD2 styling -->
    <dimen name="fs_md2_popup_min_width">78dp</dimen>
    <dimen name="fs_md2_popup_min_height">64dp</dimen>
    <dimen name="fs_md2_popup_margin_end">14dp</dimen>
    <dimen name="fs_md2_popup_elevation">4dp</dimen>
    <dimen name="fs_md2_popup_text_size">18sp</dimen>
    <!-- fast scroller - PopupStyles.MD2 background styling -->
    <dimen name="fs_md2_popup_bg_padding_start">16dp</dimen>
    <dimen name="fs_md2_popup_bg_padding_end">29dp</dimen>
</resources>
